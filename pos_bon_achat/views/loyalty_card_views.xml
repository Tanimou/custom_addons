<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit loyalty card form view to show bon_achat specific fields -->
    <record id="loyalty_card_view_form_bon_achat" model="ir.ui.view">
        <field name="name">loyalty.card.view.form.bon_achat</field>
        <field name="model">loyalty.card</field>
        <field name="inherit_id" ref="loyalty.loyalty_card_view_form"/>
        <field name="arch" type="xml">
            <!-- Add state field for bon_achat -->
            <xpath expr="//field[@name='code']" position="after">
                <field name="state" invisible="program_type != 'bon_achat'"/>
                <field name="used_date" invisible="program_type != 'bon_achat' or state != 'used'"/>
                <field name="source_pos_order_id" invisible="program_type != 'bon_achat' or not source_pos_order_id"/>
            </xpath>
            
            <!-- Add warning for used bon_achat -->
            <xpath expr="//sheet" position="before">
                <div class="alert alert-warning" role="alert" 
                     invisible="program_type != 'bon_achat' or state != 'used'">
                    <strong>Ce bon d'achat a été utilisé</strong>
                    <p>
                        Ce bon d'achat a été entièrement consommé et ne peut plus être utilisé.
                    </p>
                </div>
            </xpath>
        </field>
    </record>

    <!-- Inherit loyalty card tree view -->
    <record id="loyalty_card_view_tree_bon_achat" model="ir.ui.view">
        <field name="name">loyalty.card.view.tree.bon_achat</field>
        <field name="model">loyalty.card</field>
        <field name="inherit_id" ref="loyalty.loyalty_card_view_tree"/>
        <field name="arch" type="xml">
            <!-- Add state column for bon_achat after points_display -->
            <field name="points_display" position="after">
                <field name="state" optional="show" 
                       decoration-success="state == 'active'"
                       decoration-muted="state in ['used', 'expired']"/>
            </field>
        </field>
    </record>

