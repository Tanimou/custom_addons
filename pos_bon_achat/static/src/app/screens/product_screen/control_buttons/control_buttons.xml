<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_bon_achat.ControlButtons" t-inherit="pos_loyalty.ControlButtons" t-inherit-mode="extension">
        <!-- Add "Bon d'achat" button next to the built-in "Enter Code" tile -->
        <xpath expr="//t[@t-if=&quot;pos.models['loyalty.program'].some((p) => ['coupons', 'promotion', 'gift_card', 'promo_code', 'next_order_coupons'].includes(p.program_type))&quot;]" position="inside">
            <t t-if="pos.models['loyalty.program'].some((p) => p.program_type === 'bon_achat')">
                <button t-att-class="buttonClass"
                    t-on-click="() => this.clickBonAchat()"
                    class="o_bon_achat_button">
                    <i class="fa fa-ticket me-1"/>Bon d'achat
                </button>
            </t>
        </xpath>
    </t>
</templates>
