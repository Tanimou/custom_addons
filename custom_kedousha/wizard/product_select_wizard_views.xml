<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stock_picking_multi_product_form" model="ir.ui.view">
            <field name="name">stock.picking.multi.product.wizard.form</field>
            <field name="model">stock.picking.multi.product.wizard</field>
            <field name="arch" type="xml">
                <form string="Sélectionner des Produits">
                    <group>
                        <field name="product_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                    <footer>
                        <button name="action_add_products" string="Ajouter Produits" type="object" class="btn-primary"/>
                        <button string="Annuler" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_stock_picking_multi_product_wizard" model="ir.actions.act_window">
            <field name="name">Sélectionner Produits</field>
            <field name="res_model">stock.picking.multi.product.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>