<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ================================================================= -->
        <!-- FLEET INCIDENT TICKET VIEWS (Phase 3 - TASK-009)                  -->
        <!-- ================================================================= -->

        <!-- List View -->
        <record id="fleet_incident_ticket_view_list" model="ir.ui.view">
            <field name="name">fleet.incident.ticket.list</field>
            <field name="model">fleet.incident.ticket</field>
            <field name="arch" type="xml">
                <list string="Tickets d'incident"
                    decoration-danger="state == 'draft' and priority in ('2', '3')"
                    decoration-warning="state == 'towing'"
                    decoration-info="state == 'repair'"
                    decoration-muted="state in ('closed', 'cancelled')">
                    <field name="reference" string="Réf."/>
                    <field name="name" string="Titre"/>
                    <field name="vehicle_id"/>
                    <field name="license_plate"/>
                    <field name="incident_type"/>
                    <field name="incident_date" widget="datetime"/>
                    <field name="towing_partner_id" optional="show"/>
                    <field name="garage_partner_id" optional="show"/>
                    <field name="state" widget="badge"
                        decoration-success="state == 'closed'"
                        decoration-warning="state == 'towing'"
                        decoration-info="state == 'repair'"
                        decoration-danger="state == 'draft'"
                        decoration-muted="state == 'cancelled'"/>
                    <field name="priority" widget="priority" optional="hide"/>
                    <field name="total_actual_cost" widget="monetary" sum="Total" optional="show"/>
                    <field name="currency_id" column_invisible="1"/>
                    <field name="responsible_id" widget="many2one_avatar_user" optional="hide"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="fleet_incident_ticket_view_form" model="ir.ui.view">
            <field name="name">fleet.incident.ticket.form</field>
            <field name="model">fleet.incident.ticket</field>
            <field name="arch" type="xml">
                <form string="Ticket d'incident">
                    <header>
                        <button name="action_start_towing"
                            string="Démarrer Remorquage"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'draft'"
                            groups="custom_fleet_partner_network.group_fleet_partner_user"/>
                        <button name="action_start_repair"
                            string="Démarrer Réparation"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'towing'"
                            groups="custom_fleet_partner_network.group_fleet_partner_user"/>
                        <button name="action_close"
                            string="Clôturer"
                            type="object"
                            class="btn-primary"
                            invisible="state not in ('towing', 'repair')"
                            groups="custom_fleet_partner_network.group_fleet_partner_user"/>
                        <button name="action_cancel"
                            string="Annuler"
                            type="object"
                            class="btn-secondary"
                            invisible="state in ('closed', 'cancelled')"
                            groups="custom_fleet_partner_network.group_fleet_partner_manager"/>
                        <button name="action_reset_to_draft"
                            string="Remettre en brouillon"
                            type="object"
                            class="btn-secondary"
                            invisible="state != 'cancelled'"
                            groups="custom_fleet_partner_network.group_fleet_partner_manager"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,towing,repair,closed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_intervention"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-wrench"
                                invisible="not intervention_id">
                                <div class="o_stat_info">
                                    <field name="intervention_state" class="o_stat_value"/>
                                    <span class="o_stat_text">Intervention</span>
                                </div>
                            </button>
                            <button name="action_view_purchase_orders"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-shopping-cart"
                                invisible="purchase_order_count == 0">
                                <field name="purchase_order_count" class="o_stat_value"/>
                                <span class="o_stat_text">Commandes</span>
                            </button>
                            <button name="%(base.action_attachment)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-paperclip"
                                context="{'default_res_model': 'fleet.incident.ticket', 'default_res_id': id}">
                                <field name="attachment_count" class="o_stat_value"/>
                                <span class="o_stat_text">Documents</span>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Annulé" bg_color="text-bg-danger" invisible="state != 'cancelled'"/>
                        <widget name="web_ribbon" title="Clôturé" bg_color="text-bg-success" invisible="state != 'closed'"/>
                        <div class="oe_title">
                            <label for="reference"/>
                            <h1>
                                <field name="reference" readonly="1"/>
                            </h1>
                            <label for="name"/>
                            <h2>
                                <field name="name" placeholder="Description courte de l'incident..."/>
                            </h2>
                        </div>
                        <group>
                            <group string="Véhicule">
                                <field name="vehicle_id" options="{'no_create': True}"/>
                                <field name="license_plate"/>
                                <field name="driver_id" options="{'no_create': True}"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            <group string="Incident">
                                <field name="incident_type"/>
                                <field name="incident_date"/>
                                <field name="incident_location"/>
                                <field name="priority" widget="priority"/>
                                <field name="responsible_id" widget="many2one_avatar_user"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Partenaires" name="page_partners">
                                <group>
                                    <group string="Remorquage">
                                        <field name="towing_partner_id" options="{'no_create': True}"/>
                                        <field name="towing_contact_id" readonly="1"/>
                                        <field name="towing_scheduled_date"/>
                                        <field name="towing_actual_date" invisible="state == 'draft'"/>
                                        <field name="towing_destination"/>
                                        <!-- <button name="action_schedule_towing"
                                            string="Planifier dans le calendrier"
                                            type="object"
                                            class="btn-link"
                                            icon="fa-calendar"
                                            invisible="not towing_scheduled_date"/> -->
                                    </group>
                                    <group string="Garage">
                                        <field name="garage_partner_id" options="{'no_create': True}"/>
                                        <field name="garage_contact_id" readonly="1"/>
                                        <field name="repair_start_date"/>
                                        <field name="repair_end_date"/>
                                    </group>
                                </group>
                                <group string="Assurance">
                                    <field name="insurance_partner_id" options="{'no_create': True}"/>
                                </group>
                            </page>
                            <page string="Coûts" name="page_costs">
                                <group>
                                    <group string="Estimations">
                                        <field name="estimated_towing_cost" widget="monetary"/>
                                        <field name="estimated_repair_cost" widget="monetary"/>
                                        <field name="total_estimated_cost" widget="monetary" class="fw-bold"/>
                                    </group>
                                    <group string="Coûts réels">
                                        <field name="actual_towing_cost" widget="monetary"/>
                                        <field name="actual_repair_cost" widget="monetary"/>
                                        <field name="total_actual_cost" widget="monetary" class="fw-bold"/>
                                    </group>
                                </group>
                                <field name="currency_id" invisible="1"/>
                            </page>
                            <page string="Maintenance" name="page_maintenance">
                                <group>
                                    <group string="Intervention liée">
                                        <field name="intervention_id" readonly="1"/>
                                        <field name="intervention_state" readonly="1"/>
                                    </group>
                                    <group>
                                        <button name="action_create_intervention"
                                            string="Créer intervention curative"
                                            type="object"
                                            class="btn-primary"
                                            icon="fa-wrench"
                                            invisible="intervention_id or state == 'draft'"
                                            groups="custom_fleet_partner_network.group_fleet_partner_user"/>
                                        <button name="action_create_purchase_order"
                                            string="Créer bon de commande"
                                            type="object"
                                            class="btn-secondary"
                                            icon="fa-shopping-cart"
                                            invisible="not garage_partner_id or state == 'draft'"
                                            groups="custom_fleet_partner_network.group_fleet_partner_manager"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Description" name="page_description">
                                <field name="description" placeholder="Description détaillée de l'incident..."/>
                            </page>
                            <page string="Notes" name="page_notes">
                                <group>
                                    <field name="towing_notes" placeholder="Notes sur le remorquage..."/>
                                    <field name="repair_notes" placeholder="Notes sur la réparation..."/>
                                </group>
                                <group string="Clôture" invisible="state != 'closed'">
                                    <field name="close_date" readonly="1"/>
                                    <field name="close_notes"/>
                                </group>
                            </page>
                            <page string="Documents" name="page_documents">
                                <field name="attachment_ids" widget="many2many_binary"/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

