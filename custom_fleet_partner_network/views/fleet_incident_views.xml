        <!-- Kanban View -->
        <record id="fleet_incident_ticket_view_kanban" model="ir.ui.view">
            <field name="name">fleet.incident.ticket.kanban</field>
            <field name="model">fleet.incident.ticket</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="reference"/>
                    <field name="name"/>
                    <field name="vehicle_id"/>
                    <field name="state"/>
                    <field name="priority"/>
                    <field name="incident_type"/>
                    <field name="responsible_id"/>
                    <field name="towing_partner_id"/>
                    <field name="garage_partner_id"/>
                    <field name="total_actual_cost"/>
                    <field name="currency_id"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top mb-0">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="reference"/>
                                        </strong>
                                    </div>
                                    <field name="priority" widget="priority"/>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="name" class="text-truncate"/>
                                    <div class="mt-1">
                                        <span class="badge bg-secondary">
                                            <field name="vehicle_id"/>
                                        </span>
                                    </div>
                                    <div class="mt-1" t-if="record.towing_partner_id.value">
                                        <small class="text-muted">
                                            <i class="fa fa-truck me-1"/>
                                            <field name="towing_partner_id"/>
                                        </small>
                                    </div>
                                    <div t-if="record.garage_partner_id.value">
                                        <small class="text-muted">
                                            <i class="fa fa-wrench me-1"/>
                                            <field name="garage_partner_id"/>
                                        </small>
                                    </div>
                                </div>
                                <footer class="pt-2">
                                    <field name="responsible_id" widget="many2one_avatar_user"/>
                                    <span class="ms-auto" t-if="record.total_actual_cost.raw_value">
                                        <field name="total_actual_cost" widget="monetary"/>
                                    </span>
                                </footer>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Calendar View -->
        <record id="fleet_incident_ticket_view_calendar" model="ir.ui.view">
            <field name="name">fleet.incident.ticket.calendar</field>
            <field name="model">fleet.incident.ticket</field>
            <field name="arch" type="xml">
                <calendar string="Incidents"
                    date_start="incident_date"
                    color="state"
                    mode="month"
                    quick_create="0">
                    <field name="reference"/>
                    <field name="vehicle_id"/>
                    <field name="incident_type"/>
                </calendar>
            </field>
        </record>

        <!-- Pivot View -->
        <record id="fleet_incident_ticket_view_pivot" model="ir.ui.view">
            <field name="name">fleet.incident.ticket.pivot</field>
            <field name="model">fleet.incident.ticket</field>
            <field name="arch" type="xml">
                <pivot string="Analyse des incidents">
                    <field name="incident_date" type="row" interval="month"/>
                    <field name="incident_type" type="col"/>
                    <field name="total_actual_cost" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Graph View -->
        <record id="fleet_incident_ticket_view_graph" model="ir.ui.view">
            <field name="name">fleet.incident.ticket.graph</field>
            <field name="model">fleet.incident.ticket</field>
            <field name="arch" type="xml">
                <graph string="Incidents" type="bar">
                    <field name="incident_date" interval="month"/>
                    <field name="total_actual_cost" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- Action -->
        <record id="action_fleet_incident_ticket" model="ir.actions.act_window">
            <field name="name">Tickets d'incident</field>
            <field name="res_model">fleet.incident.ticket</field>
            <field name="view_mode">list,form,kanban,calendar,pivot,graph</field>
            <field name="context">{
                'search_default_filter_my_incidents': 1,
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer un nouveau ticket d'incident
                </p>
                <p>
                    Gérez les pannes, accidents et remorquages de votre flotte.
                    Liez les remorqueurs et garages agréés, suivez les coûts et l'avancement des réparations.
                </p>
            </field>
        </record>

    </data>
</odoo>
