<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ================= TREE VIEW ================= -->
        <record id="fleet_partner_profile_view_tree" model="ir.ui.view">
            <field name="name">fleet.partner.profile.view.tree</field>
            <field name="model">fleet.partner.profile</field>
            <field name="arch" type="xml">
                <list string="Profils Partenaires" decoration-success="supplier_approved" decoration-muted="active == False">
                    <field name="name"/>
                    <field name="partner_type" widget="badge"/>
                    <field name="partner_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="service_area_ids" widget="many2many_tags"/>
                    <field name="sla_response_hours"/>
                    <field name="sla_resolution_hours"/>
                    <field name="supplier_approved"/>
                    <field name="supplier_score" optional="hide"/>
                    <field name="active" invisible="1"/>
                </list>
            </field>
        </record>

        <!-- ================= FORM VIEW ================= -->
        <record id="fleet_partner_profile_view_form" model="ir.ui.view">
            <field name="name">fleet.partner.profile.view.form</field>
            <field name="model">fleet.partner.profile</field>
            <field name="arch" type="xml">
                <form string="Profil Partenaire">
                    <header>
                        <button name="action_open_partner" type="object" string="Ouvrir le partenaire" class="oe_highlight"/>
                        <button name="action_archive" type="object" string="Archiver" invisible="not active"/>
                        <button name="action_unarchive" type="object" string="Réactiver" invisible="active"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_open_partner"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-address-book">
                                <field name="partner_id" widget="statinfo" string="Contact"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="partner_type" widget="radio"/>
                                <field name="partner_id" options="{'no_create_edit': True}"/>
                                <field name="service_area_ids" widget="many2many_tags"/>
                                <field name="service_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="profile_reference" readonly="1"/>
                                <field name="supplier_approved" readonly="1"/>
                                <field name="supplier_score" widget="percentpie" readonly="1"/>
                                <field name="sla_response_hours"/>
                                <field name="sla_resolution_hours"/>
                                <field name="color" widget="colorpicker"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Couverture &amp; SLA">
                                <group>
                                    <field name="coverage_notes" colspan="2" placeholder="Décrire les conditions de couverture, disponibilités, tarifs spécifiques..."/>
                                </group>
                            </page>
                            <page string="Documents">
                                <field name="attachment_ids" widget="many2many_binary" options="{'no_open': True}"/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- ================= KANBAN VIEW ================= -->
        <record id="fleet_partner_profile_view_kanban" model="ir.ui.view">
            <field name="name">fleet.partner.profile.view.kanban</field>
            <field name="model">fleet.partner.profile</field>
            <field name="arch" type="xml">
                <kanban class="o_fleet_partner_kanban" default_group_by="partner_type" color="color">
                    <field name="name"/>
                    <field name="partner_type"/>
                    <field name="partner_id"/>
                    <field name="service_area_ids"/>
                    <field name="service_ids"/>
                    <field name="supplier_approved"/>
                    <field name="supplier_score"/>
                    <field name="sla_response_hours"/>
                    <field name="sla_resolution_hours"/>
                    <templates>
                        <t t-name="card">
                            <div class="o_kanban_record">
                                <div class="o_kanban_primary_left">
                                    <strong><field name="name"/></strong>
                                    <div class="text-muted" t-esc="record.partner_type.value or ''"/>
                                </div>
                                <div class="o_kanban_primary_right">
                                    <span class="badge bg-success" t-if="record.supplier_approved.raw_value">Approuvé</span>
                                </div>
                                <div class="o_kanban_details mt8">
                                    <div class="fw-bold" t-if="record.partner_id.value" t-esc="record.partner_id.value"/>
                                    <div class="small text-muted" t-if="record.service_area_ids.raw_value">
                                        Zones :
                                        <t t-foreach="record.service_area_ids.raw_value" t-as="state">
                                            <span class="badge bg-light text-dark me-1" t-esc="state[1]"/>
                                        </t>
                                    </div>
                                    <div class="small" t-if="record.sla_response_hours.raw_value">
                                        SLA Réponse : <t t-esc="record.sla_response_hours.raw_value"/> h
                                    </div>
                                    <div class="small" t-if="record.sla_resolution_hours.raw_value">
                                        SLA Résolution : <t t-esc="record.sla_resolution_hours.raw_value"/> h
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- ================= SEARCH VIEW ================= -->
        <record id="fleet_partner_profile_view_search" model="ir.ui.view">
            <field name="name">fleet.partner.profile.view.search</field>
            <field name="model">fleet.partner.profile</field>
            <field name="arch" type="xml">
                <search string="Recherche Profil Partenaire">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <filter string="Assureurs" name="partner_type_insurer" domain="[('partner_type', '=', 'insurer')]"/>
                    <filter string="Garages" name="partner_type_garage" domain="[('partner_type', '=', 'garage')]"/>
                    <filter string="Remorqueurs" name="partner_type_tow" domain="[('partner_type', '=', 'tow')]"/>
                    <filter string="Approuvés" name="supplier_approved" domain="[('supplier_approved', '=', True)]"/>
                    <filter string="Actifs" name="active" domain="[('active', '=', True)]"/>
                    <separator/>
                    <group>
                        <filter string="Type" name="group_partner_type" context="{'group_by': 'partner_type'}"/>
                        <filter string="Société" name="group_company" context="{'group_by': 'company_id'}"/>
                        <filter string="Approbation" name="group_supplier" context="{'group_by': 'supplier_approved'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- ================= ACTION ================= -->
        <record id="action_fleet_partner_profile" model="ir.actions.act_window">
            <field name="name">Réseau de Partenaires</field>
            <field name="res_model">fleet.partner.profile</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Aucun partenaire enregistré</p>
                <p>Créez votre premier profil pour suivre assureurs, garages et remorqueurs approuvés.</p>
            </field>
        </record>

    </data>
</odoo>
