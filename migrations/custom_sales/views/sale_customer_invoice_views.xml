<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Action qui ouvre les factures client -->
        <record id="action_customer_invoices_from_sale" model="ir.actions.act_window">
            <field name="name">Factures Client</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('move_type','=','out_invoice')]</field>
            <field name="context">{'default_move_type':'out_invoice'}</field>
        </record>

        <!-- Menu sous Vente -->
        <menuitem id="menu_customer_invoices_from_sale"
                  name="Factures"
                  parent="sale.sale_menu_root"
                  action="action_customer_invoices_from_sale"
                  sequence="30"/>
    </data>
</odoo>
