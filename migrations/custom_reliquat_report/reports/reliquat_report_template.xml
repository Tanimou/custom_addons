    <record id="paperformat_reliquat_report" model="report.paperformat">
        <field name="name">Reliquat Report A4</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="page_height">0</field> <!-- 0 = auto selon format -->
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field> <!-- ou Landscape -->
        <field name="margin_top">7</field>
        <field name="margin_bottom">7</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">2</field>
        <field name="dpi">100</field>
    </record>

    <!-- Lier le format papier à ton rapport -->
    <record id="action_report_reliquat" model="ir.actions.report">
        <field name="name">Rapport Reliquats</field>
        <field name="model">reliquat.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_reliquat_report.report_reliquat_document</field>
        <field name="paperformat_id" ref="paperformat_reliquat_report"/>
    </record>


    <record id="paperformat_rdc_a6" model="report.paperformat">
        <field name="name">A4 RDC</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">3</field>
        <field name="dpi">100</field>
    </record>


    <!-- Action de rapport -->
    <record id="action_report_reliquat" model="ir.actions.report">
        <field name="name">Rapport de Reliquats</field>
        <field name="model">reliquat.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_reliquat_report.report_reliquat_document</field>
        <field name="report_file">custom_reliquat_report.report_reliquat_document</field>
        <field name="print_report_name">'Reliquats - %s' % (object.name)</field>
        <field name="paperformat_id" ref="custom_reliquat_report.paperformat_reliquat_report"/>
        <!--        <field name="binding_model_id" ref="model_reliquat_report"/>-->
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">report</field>
    </record>
