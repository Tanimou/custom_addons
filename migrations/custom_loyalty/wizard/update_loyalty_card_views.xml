<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue du wizard - Simple input form for rendu monnaie amount -->
        <!-- Points are NOT updated here - only when payment is validated -->
        <record id="view_update_loyalty_card_wizard" model="ir.ui.view">
            <field name="name">update.loyalty.card.wizard.form</field>
            <field name="model">update.loyalty.card.wizard</field>
            <field name="arch" type="xml">
                <form string="Rendu monnaie - Carte fidélité">
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="loyalty_id" domain="[('partner_id', '=', partner_id), ('points', '>', 0)]"/>
                            
                        </group>
                        <group>
                            <field name="points"/>
                            <field name="points_loyalty"/>
                            <field name="pos_name"/>
                        </group>
                        <group invisible="1">
                            <field name="order_id" readonly='0'/>
                            <field name="pos_id" readonly='0'/>
                        </group>
                    </group>
                    <footer>
                        <!-- Confirmer returns the entered amount - points updated on payment validation -->
                        <button string="Confirmer" type="object" name="action_confirm_rendu_monnaie" class="btn-primary"/>
                        <button string="Annuler" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action pour ouvrir le wizard -->
        <record id="action_update_loyalty_card_wizard" model="ir.actions.act_window">
            <field name="name">Mise a jours des points de fidelite</field>
            <field name="res_model">update.loyalty.card.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>