<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="custom_loyalty.ControlButtons" t-inherit="point_of_sale.ControlButtons" t-inherit-mode="extension">
        <!-- Add loyalty button inside the control-buttons modal div -->
        <xpath expr="//t[@t-if='props.showRemainingButtons']/div[hasclass('control-buttons')]/NoteButton" position="after">
             <button class="btn btn-secondary btn-lg py-5" t-on-click="() => this.onClickLoyalty()">
                 <i class="fa fa-pencil-square me-1" role="img" aria-label="Custom Alert" title="Custom Alert"/>
                    Rendu monnaie (FCFA)
             </button>
        </xpath>
    </t>
</templates>