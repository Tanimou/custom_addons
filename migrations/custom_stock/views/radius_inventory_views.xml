<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue formulaire sub radius Inventaire -->
        <record id="view_sub_radius_inventory_form" model="ir.ui.view">
            <field name="name">sub.radius.inventory.form</field>
            <field name="model">sub.radius.inventory</field>
            <field name="arch" type="xml">
                <form string="Sous Rayon">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Nom" readonly="0"/>
                            </h1>
                        </div>  
                        <group>
                            <group>
                                <field name="code"/>
                            </group>
                            <group>
                                <field name="radius_id" options="{'no_create': True}" widget="many2one_tags" placeholder="Rayon"/>
                            </group>
                        </group>                    
                    </sheet>
                    <chatter reload_on_follower="True"/>
                </form>
            </field>
        </record>

        <!-- Vue liste Code Inventaire -->
        <record id="view_sub_radius_inventory_tree" model="ir.ui.view">
            <field name="name">sub.radius.inventory.tree</field>
            <field name="model">sub.radius.inventory</field>
            <field name="arch" type="xml">
                <list string="Sous Rayon">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="radius_id"/>
                </list>
            </field>
        </record>

        <!-- Action Code Inventaire -->
        <record id="action_sub_radius_inventory" model="ir.actions.act_window">
            <field name="name">Sous Rayon inventaire</field>
            <field name="res_model">sub.radius.inventory</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre premier Sous Rayon inventaire
                </p>
            </field>
        </record>

        <!-- Vue formulaire Code Inventaire -->
        <record id="view_radius_inventory_form" model="ir.ui.view">
            <field name="name">radius.inventory.form</field>
            <field name="model">radius.inventory</field>
            <field name="arch" type="xml">
                <form string="Rayon">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Nom" readonly="0"/>
                            </h1>
                        </div>
                        <group>
                            <field name="code" placeholder="Code Famille"/>
                        </group>                       
                    </sheet>
                    <chatter reload_on_follower="True"/>
                </form>
            </field>
        </record>

        <!-- Vue liste radius Inventaire -->
        <record id="view_radius_inventory_tree" model="ir.ui.view">
            <field name="name">radius.inventory.tree</field>
            <field name="model">radius.inventory</field>
            <field name="arch" type="xml">
                <list string="Rayon">
                    <field name="name"/>
                    <field name="code"/>
                </list>
            </field>
        </record>

        <!-- Action radius name Inventaire -->
        <record id="action_radius_inventory" model="ir.actions.act_window">
            <field name="name">Rayon inventaire</field>
            <field name="res_model">radius.inventory</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre premier Rayon inventaire
                </p>
            </field>
        </record>


        <!-- Menu principal -->

        <menuitem id="menu_radius_inventory"
                  name="Rayon"
                  parent="menu_categorie_inventory_main"
                  action="action_radius_inventory"
                  sequence="3"/>

        <menuitem id="menu_sub_radius_inventory"
                  name="Sous Rayon"
                  parent="menu_categorie_inventory_main"
                  action="action_sub_radius_inventory"
                  sequence="4"/>

    </data>

</odoo>