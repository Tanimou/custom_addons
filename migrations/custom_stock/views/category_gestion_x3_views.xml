<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Niveau 6 -->
        <record id="view_product_category_x3_form" model="ir.ui.view">
            <field name="name">product.category.x3.form</field>
            <field name="model">product.category.x3</field>
            <field name="arch" type="xml">
                <form string="Category de gestion, Niveau 6">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Nom" readonly="0"/>
                            </h1>
                        </div>  
                        <group>
                            <group>
                                <field name="stock"/>
                            </group>
                            <group>
                                <field name="description" />
                            </group>
                        </group>                    
                    </sheet>
                    <chatter reload_on_follower="True"/>
                </form>
            </field>
        </record>

        <record id="view_product_category_x3_tree" model="ir.ui.view">
            <field name="name">product.category.x3.tree</field>
            <field name="model">product.category.x3</field>
            <field name="arch" type="xml">
                <list string="Category de gestion, Niveau 6">
                    <field name="name"/>
                    <field name="stock"/>
                    <field name="description"/>
                </list>
            </field>
        </record>

        <!-- Action niveau 6 -->
        <record id="action_product_category_x3" model="ir.actions.act_window">
            <field name="name">Niveau 6</field>
            <field name="res_model">product.category.x3</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre Category de gestion, Niveau 6
                </p>
            </field>
        </record>

