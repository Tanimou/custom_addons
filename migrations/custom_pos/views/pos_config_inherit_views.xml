<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="pos_config_form_view" model="ir.ui.view">
            <field name="name">pos.config.inherit.form</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//setting[@id='other_devices']" position="after">
                    <setting id="code_acces" string="Code d'accès pour rupture de stock">
                        <field name="code_acces"/>
                    </setting>
                    <setting id="preset_remise" string="Quick Remise Buttons">
                        <field name="preset_remise_percentages" 
                               placeholder="10,20,45"
                               help="Comma-separated values for preset remise buttons"/>
                    </setting>
                    <setting id="cloture_caisse_info" string="Clôture de caisse - Infos ticket">
                        <div class="content-group">
                            <div class="row">
                                <label for="depot_number" class="col-lg-4 o_light_label"/>
                                <field name="depot_number" placeholder="02"/>
                            </div>
                            <div class="row mt-2">
                                <label for="poste_number" class="col-lg-4 o_light_label"/>
                                <field name="poste_number" placeholder="05"/>
                            </div>
                        </div>
                    </setting>
                </xpath>
            </field>
        </record>

    </data>
</odoo>