<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="pos_payment_method_form_view" model="ir.ui.view">
            <field name="name">pos.payment.method.inherit.form</field>
            <field name="model">pos.payment.method</field>
            <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='payment_method_type']" position="after">
                    <field name="is_titre_paiement" />
                    <field name="is_cheque" />
                    <field name="is_bank_card" />
                    <!-- is_loyalty defined in custom_loyalty module -->
                    <!-- is_food, is_limit defined in custom_food_credit module -->
                </xpath>
            </field>
        </record>

    </data>
</odoo>