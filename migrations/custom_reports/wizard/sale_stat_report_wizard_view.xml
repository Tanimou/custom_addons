<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire du wizard -->
    <record id="view_sale_stat_report_wizard_form" model="ir.ui.view">
        <field name="name">sale.stat.report.wizard.form</field>
        <field name="model">sale.stat.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Statistiques de Ventes">
                <sheet>
                    <group>
                        <group string="Période 1">
                            <label for="date_start_period1" string="Période 1"/>
                            <div>
                                <field name="date_start_period1" class="oe_inline"/>
                                -
                                <field name="date_end_period1" class="oe_inline"/>
                            </div>
                            <field name="company_id" options="{'no_create': True, 'no_open': True}" readonly="1"/>
                        </group>
                        <group string="Période 2">
                            <label for="date_start_period2" string="Période 2"/>
                            <div>
                                <field name="date_start_period2" class="oe_inline"/>
                                -
                                <field name="date_end_period2" class="oe_inline"/>
                            </div>
                        </group>
                    </group>

                </sheet>

                <footer>
                    <button name="action_print_report" string="Imprimer" type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action pour ouvrir le wizard -->
    <record id="action_sale_stat_report_wizard" model="ir.actions.act_window">
        <field name="name">Statistiques de Ventes</field>
        <field name="res_model">sale.stat.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_view_types">form,list</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_sale_stat_report"
              name="Rapport de Ventes"
              parent="sale.menu_sale_report"
              action="action_sale_stat_report_wizard"
              sequence="50"/>
</odoo>