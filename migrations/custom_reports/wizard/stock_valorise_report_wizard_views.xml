<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ========== VUE FORMULAIRE ========== -->
        <record id="view_stock_valorise_report_form" model="ir.ui.view">
            <field name="name">stock.valorise.report.form</field>
            <field name="model">stock.valorise.report</field>
            <field name="arch" type="xml">
                <form string="Rapport de Stock Valorisé">
                    <sheet>
                        <group>
                            <group>
                                <field name="date_report"/>
                                <field name="company_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="location_id" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Aperçu des données" name="preview">
                                <group>
                                    <field name="product_ids" nolabel="1">
                                        <list string="Stock Valorisé">
                                            <field name="code_article"/>
                                            <field name="display_name" string="Article"/>
                                            <field name="categ_id" string="Categorie"/>
                                            <field name="qty_available" string="STOCK"/>
                                            <field name="avg_cost" widget="monetary" string="PAMP" options="{'currency_field': 'currency_id'}"/>
                                            <field name="total_value" widget="monetary"
                                                   options="{'currency_field': 'currency_id'}" string="Valorisation"/>
                                            <field name="currency_id" column_invisible="1"/>
                                        </list>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button string="Imprimer" name="action_print_report" type="object" class="btn-primary"/>
                        <button string="Annuler" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- ========== ACTION FENÊTRE ========== -->
        <record id="action_stock_valorise_report" model="ir.actions.act_window">
            <field name="name">Rapport de Stock Valorisé</field>
            <field name="res_model">stock.valorise.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="stock.model_stock_location"/>
        </record>


        <!-- ========== MENU ========== -->
        <menuitem id="menu_stock_valorise_report"
                  name="Rapport de Stock Valorisé"
                  parent="stock.menu_warehouse_report"
                  action="action_stock_valorise_report"
                  sequence="100"/>


    </data>
</odoo>