<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- View for the casse report wizard -->
        <record id="view_stock_casse_report_form" model="ir.ui.view">
            <field name="name">stock.casse.report.form</field>
            <field name="model">stock.casse.report</field>
            <field name="arch" type="xml">
                <form string="Rapport de casse">
                    <sheet>
                        <group>
                            <group>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="company_id" readonly="1"/>
                            </group>
                        </group>

                        <group>
                            <field name="scrap_lines_ids" nolabel="1">
                                <list string="Lignes de casse">
                                    <field name="name"/>
                                    <field name="date_done"/>
                                    <field name="product_id"/>
                                    <field name="scrap_qty"/>
                                </list>
                            </field>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Imprimer PDF" name="action_print_report" type="object" class="btn-primary"/>
                        <button string="Annuler" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Window action for the wizard -->
        <record id="action_stock_casse_report" model="ir.actions.act_window">
            <field name="name">Rapport de casse</field>
            <field name="res_model">stock.casse.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_stock_casse_report_form"/>
        </record>

        <!-- Menu item under Analyse (warehouse reports) -->
        <menuitem id="menu_stock_casse_report"
                  name="Rapport de Casse"
                  parent="stock.menu_warehouse_report"
                  action="action_stock_casse_report"
                  sequence="110"/>

    </data>
</odoo>
