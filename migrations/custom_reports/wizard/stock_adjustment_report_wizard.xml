<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ========== VUE FORMULAIRE ========== -->
        <record id="stock_adjustment_report_form_view" model="ir.ui.view">
            <field name="name">stock.adjustment.report.wizard.form</field>
            <field name="model">stock.adjustment.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Rapport d'ajustement de stock">
                    <sheet>
                        <group>
                            <group>
                                <field name="date_from"/>
                                <field name="date_to"/>
                            </group>
                            <group>
                                <field name="company_id" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Aperçu des données" name="preview">
                                <group>
                                    <field name="scrap_lines_ids" nolabel="1">
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button string="Imprimer" name="action_print_report" type="object" class="btn-primary"/>
                        <button string="Annuler" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- ========== ACTION FENÊTRE ========== -->
        <record id="action_stock_adjustment_report" model="ir.actions.act_window">
            <field name="name">Rapport d'ajustement de stock</field>
            <field name="res_model">stock.adjustment.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="stock.model_stock_location"/>
        </record>


        <!-- ========== MENU ========== -->
        <menuitem id="menu_stock_adjustment_report"
                  name="Rapport d'ajustement de stock"
                  parent="stock.menu_warehouse_report"
                  action="action_stock_adjustment_report"
                  sequence="100"/>


    </data>
</odoo>