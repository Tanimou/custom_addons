<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue formulaire Code Inventaire -->
        <record id="view_limit_credit_form" model="ir.ui.view">
            <field name="name">limit.credit.form</field>
            <field name="model">limit.credit</field>
            <field name="arch" type="xml">
                <form string="Gestion des Limite credit" create="0" edit="1" delete="0">
                    
                    <sheet>
                        <div class="oe_title">
                            <label for="partner_id" class="oe_edit_only"/>
                            <h1>
                                <field name="partner_id" placeholder="Nom" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group name="amount">
                                <field name="amount_limit" />
                                <field name="amount_limit_consumed" readonly="1"/>
                                <field name="amount_limit_solde" readonly="1"/>
                            </group>
                            <group name="condition">
                                <field name="is_limit" readonly="1"/>
                            </group>
                        </group> 
                        <notebook>
                            <page string="Liste des Operations">
                                <field name="operations_ids" readonly="1">
                                    <list editable="bottom" create="0" edit="0" delete="0">
                                        <field name="limit_id" />
                                        <field name="name" string="Motif"/>
                                        <field name="amount_operation" string="Montant de l'operaion"/>
                                        <field name="operation_date" string='Date'/>

                                    </list>
                                </field>
                            </page>
                            
                        </notebook>                      
                    </sheet>
                    <chatter reload_on_follower="True"/>
                </form>
            </field>
        </record>

        <!-- Vue liste Limite credit -->
        <record id="view_limit_credit_list" model="ir.ui.view">
            <field name="name">limit.credit.list</field>
            <field name="model">limit.credit</field>
            <field name="arch" type="xml">
                <list string="Gestion des Limite credit" create="0" edit="1" delete="0" editable="bottom">
                    <field name="is_limit" column_invisible='1'/>
                    <field name="partner_id" options="{'no_create': True, 'no_create_edit': True}"/>
                    <field name="amount_limit" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    <field name="amount_limit_consumed" widget="monetary"/>
                    <field name="amount_limit_solde" widget="monetary"/>
                    <field name="currency_id" column_invisible="1"/>
                    <field name="create_date" string="Date de creation"/>
                    
                    <!-- Bouton avec widget et alignement -->
                    <button name="open_limit_credit_form" 
                            string="Voir les details" 
                            type="object" 
                            icon="fa-history" 
                            class="btn btn-primary"/>

                    <button name="%(custom_food_credit.action_update_limit_credit_wizard)d" 
                            string="Mettre à jour le crédit"
                            type="action" 
                            icon="fa-edit"
                            class="btn btn-warning"
                            context="{'default_limit_id': id}"/>
                </list>
            </field>
        </record>

        <!-- Action family name Inventaire -->
        <record id="action_limit_credit" model="ir.actions.act_window">
            <field name="name">Gestion des Limite credit</field>
            <field name="res_model">limit.credit</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre premier Limite credit
                </p>
            </field>
        </record>


        <!-- Menu principal -->

        <menuitem id="menu_limit_credit"
                  name="Limite credit"
                  parent="sale.menu_sale_config"
                  action="action_limit_credit"
                  sequence="13"/>


    </data>

</odoo>