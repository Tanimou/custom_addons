<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_move_form_view" model="ir.ui.view">
            <field name="name">account.move.inherit.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_shipping_id']" position="before">
                    <field name="ref"/>
                </xpath>

                <xpath expr="//page[@name='invoice_tab']//field[@name='quantity']" position="before">
                    <field name="invoice_text"/>
                </xpath> 
            </field>
        </record>

        <record id="account_journal_form_view" model="ir.ui.view">
            <field name="name">account.journal.inherit.form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">

                <xpath expr="//page[@name='advanced_settings']/group" position="inside">
                    <group name="credit" string="Credit">
                        <field name="is_food"/>
                        <field name="is_limit"/>
                    </group>
                </xpath> 
            </field>
        </record>

    </data>
</odoo>