<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue du wizard -->
        <record id="food_credit_invoice_wizard_form" model="ir.ui.view">
            <field name="name">food.credit.invoice.wizard.form</field>
            <field name="model">food.credit.invoice.wizard</field>
            <field name="arch" type="xml">
                <form string="Générer les Factures">
                    <group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="invoice_date"/>
                        </group>
                        <group>
                            <field name="journal_id"/>
                            <field name="product_id"/>
                        </group>
                    </group>
                    <field name="food_ids"/>
                    <footer>
                        <button name="action_preview_invoices" string="Aperçu" type="object" class="btn-secondary"/>
                        <button name="action_generate_invoices" string="Générer les Factures" type="object" class="btn-primary"/>
                        <button string="Annuler" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action pour ouvrir le wizard -->
        <record id="action_food_credit_invoice_wizard" model="ir.actions.act_window">
            <field name="name">Générer Crédits Alimentaires</field>
            <field name="res_model">food.credit.invoice.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>