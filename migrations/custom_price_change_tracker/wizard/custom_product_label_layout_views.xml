<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="custom_product_label_layout_form" model="ir.ui.view">
            <field name="name">custom.product.label.layout.form</field>
            <field name="model">product.label.layout</field>
            <field name="inherit_id" ref="product.product_label_layout_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='pricelist_id']" position="before">
                    <field name="multi_barcode_id" options="{'no_create': True, 'no_open': True}" invisible="1"/>
                    <field name="product_id" invisible="1"/>
                    <field name="product_tmp_id" invisible="1"/>
                    <field name="barcode" invisible="1"/>
                </xpath>

                <xpath expr="//field[@name='print_format']" position="attributes">
                        <attribute name="invisible">1</attribute>
                </xpath>

            </field>
        </record>


    </data>
</odoo>