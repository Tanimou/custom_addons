<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        SCORE Kanban Views for quick actions and status overview
    -->

    <!-- ============================================================
         FLEET VEHICLE KANBAN WITH SCORE KPIs
         ============================================================ -->

    <record id="view_score_fleet_vehicle_kanban" model="ir.ui.view">
        <field name="name">score.fleet.vehicle.kanban</field>
        <field name="model">fleet.vehicle</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="maintenance_state">
                <field name="id"/>
                <field name="name"/>
                <field name="license_plate"/>
                <field name="driver_id"/>
                <field name="category_id"/>
                <field name="maintenance_state"/>
                <field name="administrative_state"/>
                <field name="mission_count"/>
                <field name="active_consumption_alert"/>
                <templates>
                    <t t-name="kanban-card">
                        <div class="o_kanban_card_content">
                            <div class="o_kanban_primary_left">
                                <strong>
                                    <field name="name"/>
                                </strong>
                            </div>
                            <div class="o_kanban_secondary">
                                <span class="text-muted">
                                    <field name="license_plate"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <span class="text-muted">Conducteur: </span>
                                    <field name="driver_id"/>
                                </div>
                                <div>
                                    <span class="text-muted">Famille: </span>
                                    <field name="category_id"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span class="badge rounded-pill">
                                        <field name="mission_count"/> missions
                                    </span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="administrative_state" widget="badge"
                                           decoration-success="administrative_state == 'ok'"
                                           decoration-warning="administrative_state == 'warning'"
                                           decoration-danger="administrative_state == 'critical'"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Fleet Kanban Action -->
    <record id="action_score_fleet_kanban" model="ir.actions.act_window">
        <field name="name">Parc v√©hicules</field>
        <field name="res_model">fleet.vehicle</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_score_fleet_vehicle_kanban')})]"/>
        <field name="context">{'search_default_active': 1}</field>
    </record>

    <!-- ============================================================
         QUICK ACTIONS KANBAN DASHBOARD
         ============================================================ -->

    <!-- Quick Actions Dashboard - Uses fleet.vehicle as base but groups by state -->
    <record id="view_score_quick_actions_kanban" model="ir.ui.view">
        <field name="name">score.quick.actions.kanban</field>
        <field name="model">fleet.vehicle</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard" create="false" edit="false">
                <field name="id"/>
                <field name="name"/>
                <field name="maintenance_state"/>
                <field name="administrative_state"/>
                <field name="is_on_mission"/>
                <templates>
                    <t t-name="kanban-card">
                        <div class="o_kanban_card_content d-flex flex-column">
                            <div class="o_kanban_primary_left flex-grow-1">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="maintenance_state" widget="badge"/>
                            </div>
                            <div class="o_kanban_record_bottom mt-auto">
                                <div class="oe_kanban_bottom_left">
                                    <span t-if="record.is_on_mission.raw_value" 
                                          class="badge bg-primary">En mission</span>
                                    <span t-else="" 
                                          class="badge bg-success">Disponible</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>
