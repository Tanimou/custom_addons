<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- ========== FLEET MISSION: list VIEW ========== -->
        
        <record id="fleet_mission_view_list" model="ir.ui.view">
            <field name="name">fleet.mission.view.list</field>
            <field name="model">fleet.mission</field>
            <field name="arch" type="xml">
                <list string="Missions" decoration-muted="state=='cancelled'" decoration-success="state=='done'" decoration-info="state=='approved'" decoration-warning="has_conflict==True">
                    <field name="name"/>
                    <field name="order_number"/>
                    <field name="requester_id"/>
                    <field name="driver_id" widget="many2one_avatar_user"/>
                    <field name="vehicle_id"/>
                    <field name="destination" optional="show"/>
                    <field name="mission_type"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="duration_days" optional="show"/>
                    <field name="distance_km" optional="hide"/>
                    <field name="state" widget="badge" decoration-info="state in ('draft','submitted')" decoration-success="state=='done'" decoration-warning="state in ('approved','in_progress')" decoration-danger="state=='cancelled'"/>
                    <field name="has_conflict" column_invisible="1"/>
                    <field name="company_id" groups="base.group_multi_company" optional="show"/>
                </list>
            </field>
        </record>
        
        <!-- ========== FLEET MISSION: FORM VIEW ========== -->
        
        <record id="fleet_mission_view_form" model="ir.ui.view">
            <field name="name">fleet.mission.view.form</field>
            <field name="model">fleet.mission</field>
            <field name="arch" type="xml">
                <form string="Mission">
                    <header>
                        <button name="action_submit" string="Soumettre" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_approve" string="Approuver" type="object" class="oe_highlight" invisible="state != 'submitted'" groups="custom_fleet_management.group_fleet_manager"/>
                        <button name="action_start" string="Démarrer" type="object" class="oe_highlight" invisible="state != 'approved'"/>
                        <button name="action_done" string="Terminer" type="object" class="oe_highlight" invisible="state != 'in_progress'"/>
                        <button name="%(custom_fleet_management.action_mission_cancellation_wizard)d" string="Annuler" type="action" invisible="state in ('done','cancelled')"/>
                        <button name="action_reset_to_draft" string="Réinitialiser" type="object" invisible="state != 'cancelled'" groups="custom_fleet_management.group_fleet_manager"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,in_progress,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!-- Calendar event button removed - method action_view_calendar_event not defined -->
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                            <h3 invisible="not order_number">
                                <span class="text-muted">Ordre N°: </span>
                                <field name="order_number" readonly="1" class="oe_inline"/>
                            </h3>
                        </div>
                        
                        <div class="alert alert-warning" role="alert" invisible="not has_conflict">
                            <field name="has_conflict" invisible="1"/>
                            <field name="conflict_details" widget="text" readonly="1"/>
                        </div>
                        
                        <group>
                            <group name="requestor_info" string="Informations Demandeur">
                                <field name="requester_id" options="{'no_create': True}"/>
                                <field name="date_request" readonly="1"/>
                                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                            </group>
                            <group name="vehicle_driver_info" string="Véhicule et Conducteur">
                                <field name="vehicle_id" options="{'no_create': True}" required="1" domain="[('is_available', '=', True)]"/>
                                <field name="driver_id" widget="many2one_avatar_user" options="{'no_create': True}" required="1"/>
                                <field name="approved_by" readonly="1" invisible="state not in ('approved','in_progress','done')"/>
                            </group>
                        </group>
                        
                        <group>
                            <group name="mission_details" string="Détails Mission">
                                <field name="mission_type" required="1"/>
                                <field name="destination"/>
                                <field name="objective" placeholder="Objet de la mission..."/>
                            </group>
                            <group name="schedule" string="Planning">
                                <field name="date_start" required="1"/>
                                <field name="date_end" required="1"/>
                                <field name="duration_days" readonly="1"/>
                                <field name="calendar_event_id" readonly="1" invisible="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <group name="odometer_info" string="Kilométrage">
                                <field name="odo_start" readonly="state not in ('approved','in_progress')"/>
                                <field name="odo_end" readonly="state != 'in_progress'"/>
                                <field name="distance_km" readonly="1"/>
                            </group>
                            <group name="fuel_info" string="Carburant">
                                <field name="estimated_consumption" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Notes" name="notes">
                                <field name="notes" placeholder="Remarques, instructions spéciales, documents à emporter..."/>
                            </page>
                            <page string="Historique" name="history" invisible="state == 'draft'">
                                <group>
                                    <group string="Dates Workflow">
                                        <field name="date_request" readonly="1"/>
                                        <field name="approval_date" readonly="1"/>
                                        <field name="approved_by" readonly="1"/>
                                    </group>
                                    <group string="Détails">
                                        <field name="passenger_ids" widget="many2many_tags"/>
                                        <field name="payload_description"/>
                                        <field name="cancellation_reason" invisible="state != 'cancelled'"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>
        
        <!-- ========== FLEET MISSION: KANBAN VIEW ========== -->
        
        <record id="fleet_mission_view_kanban" model="ir.ui.view">
            <field name="name">fleet.mission.view.kanban</field>
            <field name="model">fleet.mission</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" default_group_by="state" quick_create="false">
                    <field name="name"/>
                    <field name="vehicle_id"/>
                    <field name="driver_id"/>
                    <field name="destination"/>
                    <field name="mission_type"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="state"/>
                    <field name="has_conflict"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                        <div class="o_kanban_record_subtitle text-muted">
                                            <i class="fa fa-car"/> <field name="vehicle_id"/>
                                        </div>
                                    </div>
                                    <span class="badge badge-pill" t-attf-class="badge-#{record.state.raw_value == 'done' ? 'success' : record.state.raw_value in ['approved','in_progress'] ? 'info' : 'secondary'}">
                                        <field name="state"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <i class="fa fa-user"/> <field name="driver_id"/>
                                    </div>
                                    <div t-if="record.destination.raw_value">
                                        <i class="fa fa-map-marker"/> <field name="destination"/>
                                    </div>
                                    <div>
                                        <span t-attf-class="badge badge-#{record.mission_type.raw_value == 'urban' ? 'primary' : 'secondary'}">
                                            <field name="mission_type"/>
                                        </span>
                                    </div>
                                    <div class="text-muted">
                                        <i class="fa fa-calendar"/> <field name="date_start"/> → <field name="date_end"/>
                                    </div>
                                    <div t-if="record.has_conflict.raw_value" class="text-warning">
                                        <i class="fa fa-exclamation-triangle"/> Conflit détecté
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- ========== FLEET MISSION: CALENDAR VIEW ========== -->
        
        <record id="fleet_mission_view_calendar" model="ir.ui.view">
            <field name="name">fleet.mission.view.calendar</field>
            <field name="model">fleet.mission</field>
            <field name="arch" type="xml">
                <calendar string="Missions" date_start="date_start" date_stop="date_end" color="mission_type" mode="month" quick_create="1" event_open_popup="1">
                    <field name="name"/>
                    <field name="vehicle_id"/>
                    <field name="driver_id"/>
                    <field name="mission_type"/>
                    <field name="state" filters="1" invisible="1"/>
                </calendar>
            </field>
        </record>
        
        <!-- ========== FLEET MISSION: GANTT VIEW ========== -->
        
        <record id="fleet_mission_view_gantt" model="ir.ui.view">
            <field name="name">fleet.mission.view.gantt</field>
            <field name="model">fleet.mission</field>
            <field name="arch" type="xml">
                <gantt string="Missions Gantt" date_start="date_start" date_stop="date_end" default_group_by="vehicle_id" color="mission_type">
                    <field name="name"/>
                    <field name="vehicle_id"/>
                    <field name="driver_id"/>
                    <field name="state"/>
                </gantt>
            </field>
        </record>
        
