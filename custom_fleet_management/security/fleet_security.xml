<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- ========== RECORD RULES ========== -->
        
        <!-- FLEET.MISSION: Multi-company isolation -->
        <record id="fleet_mission_company_rule" model="ir.rule">
            <field name="name">Fleet Mission: Multi-company</field>
            <field name="model_id" ref="model_fleet_mission"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_fleet_user')), (4, ref('group_fleet_manager'))]"/>
        </record>
        
        <!-- FLEET.MISSION: Driver can only see their own missions (portal access) -->
        <record id="fleet_mission_driver_rule" model="ir.rule">
            <field name="name">Fleet Mission: Driver Own Missions</field>
            <field name="model_id" ref="model_fleet_mission"/>
            <field name="domain_force">[('driver_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_fleet_driver_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- FLEET.VEHICLE.DOCUMENT: Multi-company isolation -->
        <record id="fleet_document_company_rule" model="ir.rule">
            <field name="name">Fleet Document: Multi-company</field>
            <field name="model_id" ref="model_fleet_vehicle_document"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_fleet_user')), (4, ref('group_fleet_manager'))]"/>
        </record>
        
        <!-- FLEET.VEHICLE.DOCUMENT: Sensitive documents (Assurance, PV) restricted to managers -->
        <record id="fleet_document_sensitive_rule" model="ir.rule">
            <field name="name">Fleet Document: Sensitive (Manager Only)</field>
            <field name="model_id" ref="model_fleet_vehicle_document"/>
            <field name="domain_force">[
                '|',
                ('document_type', 'not in', ['assurance', 'pv']),
                ('id', '=', False)
            ]</field>
            <field name="groups" eval="[(4, ref('group_fleet_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- FLEET.VEHICLE.DOCUMENT: Managers can access all documents -->
        <record id="fleet_document_manager_all_rule" model="ir.rule">
            <field name="name">Fleet Document: Manager All Access</field>
            <field name="model_id" ref="model_fleet_vehicle_document"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_fleet_manager'))]"/>
        </record>
        
    </data>
</odoo>
