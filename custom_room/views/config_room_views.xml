<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_office_room_booking_form" model="ir.ui.view">
            <field name="name">office.room.booking.form</field>
            <field name="model">office.room.booking</field>
            <field name="arch" type="xml">
                <form string="Gestion des bureau" create="0" edit="0" delete="0">
                    
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Nom"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="building_id"/>
                                <field name="owner_id"/>
                            </group>
                            <group>
                                <field name="description"/>
                            </group>
                        </group> 

                        <group>
                            <field name="equipment_ids"/>
                        </group>             
                    </sheet>
                    <chatter reload_on_follower="True"/>
                </form>
            </field>
        </record>

        <record id="view_office_room_booking_list" model="ir.ui.view">
            <field name="name">office.room.booking.list</field>
            <field name="model">office.room.booking</field>
            <field name="arch" type="xml">
                
                <list string="Gestion des budget" create="1" edit="1" delete="0">
                    <field name="name"/>
                    <field name="owner_id"/>
                    <field name="building_id"/>
                </list>
            </field>
        </record>

        <record id="action_office_room_booking" model="ir.actions.act_window">
            <field name="name">Gestion des Bureaux</field>
            <field name="res_model">office.room.booking</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer vos salles: bureau
                </p>
            </field>
        </record>

        <record id="view_building_room_booking_form" model="ir.ui.view">
            <field name="name">building.room.booking.form</field>
            <field name="model">building.room.booking</field>
            <field name="arch" type="xml">
                <form string="Gestion des bureau" create="0" edit="0" delete="0">
                    
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Nom"/>
                            </h1>
                        </div>

                        <group>
                            <field name="description"/>
                        </group>             
                    </sheet>
                    <chatter reload_on_follower="True"/>
                </form>
            </field>
        </record>

        <record id="view_building_room_booking_list" model="ir.ui.view">
            <field name="name">building.room.booking.list</field>
            <field name="model">building.room.booking</field>
            <field name="arch" type="xml">
                
                <list string="Gestion des budget" create="1" edit="1" delete="0">
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="action_building_room_booking" model="ir.actions.act_window">
            <field name="name">Gestion des Batiment</field>
            <field name="res_model">building.room.booking</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer vos salles: Batiment
                </p>
            </field>
        </record>


        <!-- <record id="room.room_booking_menu" model="ir.ui.menu">
            <field name="groups_id" eval="[(6, 0, [ref('base.group_no_one')])]"/>
        </record> -->


        <!-- Menu principal -->

        <menuitem 
            id="menu_config_room_booking"
            name="Configurations"
            parent="room.room_menu_root"
            sequence="100"/>

        <menuitem 
            id="menu_office_room_booking"
            name="Bureau"
            parent="menu_config_room_booking"
            action="action_office_room_booking"
            sequence="1"/>

        <menuitem
            id="room_building_menu_inherit"
            name="Batiment"
            action="action_building_room_booking"
            parent="menu_config_room_booking"
            sequence="2"/>

    </data>

</odoo>