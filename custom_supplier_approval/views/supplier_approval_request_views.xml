<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Supplier Approval Request Form View -->
    <record id="view_supplier_approval_request_form" model="ir.ui.view">
        <field name="name">supplier.approval.request.form</field>
        <field name="model">supplier.approval.request</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Demande d'approbation du fournisseur">
                <header>
                    <button name="action_submit" string="Soumettre" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_approve" string="Approuver" type="object" class="oe_highlight" invisible="state != 'pending'" groups="purchase.group_purchase_manager"/>
                    <button name="%(custom_supplier_approval.action_supplier_rejection_wizard)d" string="Rejeter" type="action" invisible="state != 'pending'" groups="purchase.group_purchase_manager"/>
                    <button name="action_reset_to_draft" string="Réinitialiser au brouillon" type="object" invisible="state != 'rejected'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,pending,approved"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_legal_documents"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-file-text">
                            <span>Voir Documents</span>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" domain="[('supplier_rank', '>', 0)]" readonly="state != 'draft'"/>
                            <field name="requested_by" readonly="1"/>
                            <field name="request_date" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="approved_by" readonly="1" invisible="state not in ['approved']"/>
                            <field name="approval_date" readonly="1" invisible="state not in ['approved']"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Détails" name="details">
                            <group>
                                <separator string="Description du service" colspan="2"/>
                                <field name="service_types" placeholder="Décrivez les services ou produits fournis par ce fournisseur..." readonly="state not in ['draft']" nolabel="1" colspan="2"/>
                            </group>
                            <group>
                                <separator string="Évaluation initiale" colspan="2"/>
                                <field name="initial_evaluation" placeholder="Évaluation initiale si le fournisseur a déjà été testé..." readonly="state not in ['draft']" nolabel="1" colspan="2"/>
                            </group>
                        </page>
                        <page string="Détails de rejet" name="rejection" invisible="state not in ['rejected']">
                            <group>
                                <field name="rejection_reason" nolabel="1" colspan="2" placeholder="Entrez la raison du rejet..." readonly="state != 'pending'"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                 <chatter/>
            </form>
        </field>
    </record>

    <!-- Supplier Approval Request List View -->
    <record id="view_supplier_approval_request_list" model="ir.ui.view">
        <field name="name">supplier.approval.request.list</field>
        <field name="model">supplier.approval.request</field>
        <field name="arch" type="xml">
            <list string="Demandes d'approbation" decoration-info="state == 'draft'" decoration-warning="state == 'pending'" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="requested_by"/>
                <field name="request_date"/>
                <field name="approved_by"/>
                <field name="approval_date"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'pending'" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'"/>
            </list>
        </field>
    </record>

    

