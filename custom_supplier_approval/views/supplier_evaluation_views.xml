<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Supplier Evaluation Form View -->
    <record id="view_supplier_evaluation_form" model="ir.ui.view">
        <field name="name">supplier.evaluation.form</field>
        <field name="model">supplier.evaluation</field>
        <field name="arch" type="xml">
            <form string="Évaluation du fournisseur">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_purchase_order"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-shopping-cart"
                                invisible="not purchase_order_id">
                            <span>Purchase Order</span>
                        </button>
                        <button name="action_view_supplier"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-building">
                            <span>View Supplier</span>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" domain="[('supplier_rank', '>', 0), ('supplier_approved', '=', True)]"/>
                            <field name="purchase_order_id" domain="[('partner_id', '=', partner_id)]"/>
                            <field name="evaluation_date"/>
                        </group>
                        <group>
                            <field name="evaluated_by"/>
                            <field name="overall_score" widget="percentage"/>
                        </group>
                    </group>
                    <group string="Critères d'évaluation">
                        <group>
                            <field name="quality_rating" widget="selection"/>
                            <field name="delivery_rating" widget="selection"/>
                            <field name="reactivity_rating" widget="selection"/>
                        </group>
                        <group>
                            <field name="compliance_rating" widget="selection"/>
                            <field name="commercial_rating" widget="selection"/>
                        </group>
                    </group>
                    <group string="Commentaires">
                        <field name="comments" nolabel="1" placeholder="Commentaires supplémentaires sur cette évaluation..."/>
                    </group>
                </sheet>
 <chatter/>            
</form>
        </field>
    </record>

    <!-- Supplier Evaluation List View -->
    <record id="view_supplier_evaluation_list" model="ir.ui.view">
        <field name="name">supplier.evaluation.list</field>
        <field name="model">supplier.evaluation</field>
        <field name="arch" type="xml">
            <list string="Évaluations des fournisseurs" decoration-success="overall_score >= 80" decoration-warning="overall_score >= 60 and overall_score &lt; 80" decoration-danger="overall_score &lt; 60">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="evaluation_date"/>
                <field name="quality_rating"/>
                <field name="delivery_rating"/>
                <field name="reactivity_rating"/>
                <field name="compliance_rating"/>
                <field name="commercial_rating"/>
                <field name="overall_score" widget="progressbar"/>
                <field name="evaluated_by"/>
            </list>
        </field>
    </record>

