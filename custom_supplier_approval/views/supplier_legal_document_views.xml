<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Supplier Legal Document Form View -->
    <record id="view_supplier_legal_document_form" model="ir.ui.view">
        <field name="name">supplier.legal.document.form</field>
        <field name="model">supplier.legal.document</field>
        <field name="arch" type="xml">
            <form string="Document Légal du Fournisseur">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="pending,valid,expired"/>
                </header>
                <sheet>
                    <div class="alert alert-info" role="alert">
                        <i class="fa fa-info-circle"/> Utilisez la section <strong>"Joindre des fichiers"</strong> dans le panneau de droite pour ajouter vos pièces jointes avec aperçu miniature.
                    </div>

                    <div class="oe_button_box" name="button_box">
                    </div>
                    <group>

                        <group>
                            <field name="partner_id" domain="[('supplier_rank', '>', 0)]"/>
                            <field name="document_type"/>
                            <field name="document_number"/>
                        </group>
                        <group>
                            <field name="issue_date"/>
                            <field name="expiry_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Additional notes about this document..."/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Supplier Legal Document List View -->
    <record id="view_supplier_legal_document_list" model="ir.ui.view">
        <field name="name">supplier.legal.document.list</field>
        <field name="model">supplier.legal.document</field>
        <field name="arch" type="xml">
            <list string="Documents Légaux" decoration-success="state == 'valid'" decoration-danger="state == 'expired'" decoration-muted="state == 'pending'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="document_type"/>
                <field name="document_number"/>
                <field name="issue_date"/>
                <field name="expiry_date"/>
                <field name="state" widget="badge" decoration-success="state == 'valid'" decoration-danger="state == 'expired'" decoration-warning="state == 'pending'"/>
            </list>
        </field>
    </record>

