<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Purchase Order Form View Extension - Filter Approved Suppliers Only -->
    <record id="view_purchase_order_form_inherit_supplier_approval" model="ir.ui.view">
        <field name="name">purchase.order.form.supplier.approval</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <!-- Add domain to partner_id to show only approved suppliers -->
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="domain">['&amp;', ('supplier_rank', '&gt;', 0), ('supplier_approved', '=', True)]</attribute>
            </xpath>
        </field>
    </record>
</odoo>
