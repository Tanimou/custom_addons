<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Supplier Category Form View -->
    <record id="view_supplier_category_form" model="ir.ui.view">
        <field name="name">supplier.category.form</field>
        <field name="model">supplier.category</field>
        <field name="arch" type="xml">
            <form string="Supplier Category">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_suppliers"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-users">
                            <field name="partner_count" widget="statinfo" string="Fournisseurs"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" placeholder="Nom de la catégorie"/>
                            <field name="code" placeholder="Code unique"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Category description..."/>
                    </group>
                </sheet>
                 <chatter/>
            </form>
        </field>
    </record>

    <!-- Supplier Category List View -->
    <record id="view_supplier_category_list" model="ir.ui.view">
        <field name="name">supplier.category.list</field>
        <field name="model">supplier.category</field>
        <field name="arch" type="xml">
            <list string="Catégories">
                <field name="name"/>
                <field name="code"/>
                <field name="partner_count" string="Fournisseurs"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Supplier Category Search View -->
    <record id="view_supplier_category_search" model="ir.ui.view">
        <field name="name">supplier.category.search</field>
        <field name="model">supplier.category</field>
        <field name="arch" type="xml">
            <search string="Search Categories">
                <field name="name" string="Catégorie"/>
                <field name="code"/>
                <filter string="Actif" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archivé" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>
</odoo>
