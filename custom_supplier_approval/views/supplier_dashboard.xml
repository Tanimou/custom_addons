<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Supplier Approval Dashboard -->
    <!-- Note: Using kanban view with dashboard styling instead of deprecated 'dashboard' view type -->

    <!-- Enhanced Kanban Dashboard View for Approval Requests -->
    <!-- MUST BE DEFINED BEFORE actions that reference it -->
    <record id="view_supplier_approval_request_kanban" model="ir.ui.view">
        <field name="name">supplier.approval.request.kanban</field>
        <field name="model">supplier.approval.request</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard" sample="1" 
                    default_group_by="state" quick_create="false">
                <field name="partner_id"/>
                <field name="requested_by"/>
                <field name="request_date"/>
                <field name="state"/>
                <field name="service_types"/>
                
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="partner_id"/>
                                    </strong>
                                    <small class="o_kanban_record_subtitle text-muted">
                                        <field name="name"/>
                                    </small>
                                </div>
                                <span class="float-end">
                                    <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'pending'" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'"/>
                                </span>
                            </div>
                            
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-6">
                                        <span class="text-muted">Demandé par:</span>
                                        <field name="requested_by"/>
                                    </div>
                                    <div class="col-6">
                                        <span class="text-muted">Date:</span>
                                        <field name="request_date"/>
                                    </div>
                                </div>
                                <div class="mt-2" t-if="record.service_types.raw_value">
                                    <span class="badge badge-pill badge-info">
                                        <i class="fa fa-briefcase"/> <field name="service_types"/>
                                    </span>
                                </div>
                            </div>
                            
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="requested_by" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Dashboard Action -->
    <record id="action_supplier_approval_dashboard" model="ir.actions.act_window">
        <field name="name">Tableau de Bord</field>
        <field name="res_model">supplier.approval.request</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="view_id" ref="view_supplier_approval_request_kanban"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Bienvenue sur le tableau de bord des approbations fournisseurs
            </p>
            <p>
                Le tableau de bord vous donne une vue d'ensemble rapide de :
                <ul>
                    <li>Les fournisseurs approuvés</li>
                    <li>Les demandes en attente</li>
                    <li>Le score de satisfaction moyen</li>
                    <li>Les évaluations récentes</li>
                </ul>
            </p>
        </field>
    </record>

    <!-- Add Dashboard to Main Menu (Top Level) -->
    <record id="menu_supplier_approval_dashboard" model="ir.ui.menu">
        <field name="name">Tableau de Bord</field>
        <field name="parent_id" ref="menu_supplier_approval_root"/>
        <field name="action" ref="action_supplier_approval_dashboard"/>
        <field name="sequence">1</field>
    </record>

    <!-- Alternative: Cohort View for Supplier Performance Over Time -->
    <record id="view_supplier_evaluation_cohort" model="ir.ui.view">
        <field name="name">supplier.evaluation.cohort</field>
        <field name="model">supplier.evaluation</field>
        <field name="arch" type="xml">
            <cohort string="Cohorte de Performance" 
                    date_start="evaluation_date" 
                    date_stop="evaluation_date" 
                    interval="month" 
                    measure="overall_score">
                <field name="partner_id"/>
            </cohort>
        </field>
    </record>

    <!-- Cohort Action -->
    <record id="action_supplier_evaluation_cohort" model="ir.actions.act_window">
        <field name="name">Analyse de Cohorte</field>
        <field name="res_model">supplier.evaluation</field>
        <field name="view_mode">cohort,list,form</field>
        <field name="view_id" ref="view_supplier_evaluation_cohort"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune donnée de cohorte disponible
            </p>
            <p>
                L'analyse de cohorte permet de suivre la performance des fournisseurs
                sur plusieurs périodes consécutives.
            </p>
        </field>
    </record>

</odoo>
