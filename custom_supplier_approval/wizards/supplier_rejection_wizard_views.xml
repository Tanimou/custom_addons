<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Supplier Rejection Wizard Form View -->
    <record id="supplier_rejection_wizard_form" model="ir.ui.view">
        <field name="name">supplier.rejection.wizard.form</field>
        <field name="model">supplier.rejection.wizard</field>
        <field name="arch" type="xml">
            <form string="Rejeter la demande">
                <group>
                    <div class="alert alert-warning" role="alert">
                        <strong>Attention!</strong> Vous êtes sur le point de rejeter la demande d'approbation fournisseur pour <field name="partner_name" readonly="1" nolabel="1" class="fw-bold"/>.
                        <br/>
                        Cette action est irréversible. Le fournisseur sera notifié du rejet et ne pourra pas être utilisé pour les achats.
                    </div>
                </group>
                <group>
                    <field name="approval_request_id" invisible="1"/>
                    <field name="rejection_reason" placeholder="Entrez la raison du rejet..."/>
                </group>
                <footer>
                    <button name="action_confirm_rejection" type="object" string="Confirmer le rejet" class="btn-danger"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Supplier Rejection Wizard Action -->
    <record id="action_supplier_rejection_wizard" model="ir.actions.act_window">
        <field name="name">Rejeter la demande</field>
        <field name="res_model">supplier.rejection.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_approval_request_id': active_id}</field>
    </record>
</odoo>
