<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- 1. D'abord créer le provider Jeko -->
        <record id="payment_provider_jeko" model="payment.provider">
            <field name="name">Jeko</field>
            <field name="code">jeko</field>
            <field name="state">disabled</field>
            <field name="is_published">False</field>
            <field name="redirect_form_view_id" ref="redirect_form"/>
            <field name="image_128"
                type="base64"
                file="custom_payment_jeko/static/description/icon.png"/>
        </record>

        <!-- 2.  Ensuite créer la méthode de paiement (sans l'activer) -->
        <record id="payment_method_wave_jeko" model="payment.method">
            <field name="name">Wave Jeko</field>
            <field name="code">jeko</field>
            <field name="sequence">100</field>
            <field name="active">False</field>
            <field name="support_tokenization">False</field>
            <field name="provider_ids" eval="[(4, ref('payment_provider_jeko'))]"/>
            <field name="jeko_payment_method">wave</field>
            <field name="image" type="base64" file="custom_payment_jeko/static/description/wave.png"/>
        </record>

        <record id="payment_method_mtn_jeko" model="payment.method">
            <field name="name">MTN Money Jeko</field>
            <field name="code">jeko</field>
            <field name="sequence">101</field>
            <field name="active">False</field>
            <field name="support_tokenization">False</field>
            <field name="provider_ids" eval="[(4, ref('payment_provider_jeko'))]"/>
            <field name="jeko_payment_method">mtn</field>
            <field name="image" type="base64" file="custom_payment_jeko/static/description/mtn.png"/>
        </record>

        <record id="payment_method_orange_jeko" model="payment.method">
            <field name="name">Orange Money Jeko</field>
            <field name="code">jeko</field>
            <field name="sequence">102</field>
            <field name="active">False</field>
            <field name="support_tokenization">False</field>
            <field name="provider_ids" eval="[(4, ref('payment_provider_jeko'))]"/>
            <field name="jeko_payment_method">orange</field>
            <field name="image" type="base64" file="custom_payment_jeko/static/description/orange.png"/>
        </record>

        <record id="payment_method_moov_jeko" model="payment.method">
            <field name="name">Moov Money Jeko</field>
            <field name="code">jeko</field>
            <field name="sequence">103</field>
            <field name="active">False</field>
            <field name="support_tokenization">False</field>
            <field name="provider_ids" eval="[(4, ref('payment_provider_jeko'))]"/>
            <field name="jeko_payment_method">moov</field>
            <field name="image" type="base64" file="custom_payment_jeko/static/description/moov.png"/>
        </record>

        <record id="payment_method_djamo_jeko" model="payment.method">
            <field name="name">Djamo Jeko</field>
            <field name="code">jeko</field>
            <field name="sequence">104</field>
            <field name="active">False</field>
            <field name="support_tokenization">False</field>
            <field name="provider_ids" eval="[(4, ref('payment_provider_jeko'))]"/>
            <field name="jeko_payment_method">djamo</field>
            <field name="image" type="base64" file="custom_payment_jeko/static/description/djamo.png"/>
        </record>

    </data>
</odoo>
