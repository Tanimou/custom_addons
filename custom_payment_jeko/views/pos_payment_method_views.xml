<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_payment_method_view_form_inherit_pos_jeko_soundbox" model="ir.ui.view">
        <field name="name">pos.payment.method.form.inherit.jeko.soundbox</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='use_payment_terminal']" position="after">
                <!-- Jeko Soundbox -->
                <field name="provider_id" 
                        invisible="use_payment_terminal != 'jeko_soundbox'" 
                        required="use_payment_terminal == 'jeko_soundbox'"
                        password="True"/>
                <field name="jeko_soundbox_store_id" 
                        invisible="use_payment_terminal != 'jeko_soundbox'" 
                        required="use_payment_terminal == 'jeko_soundbox'"
                        password="True"/>
                <field name="jeko_soundbox_device_id" 
                        invisible="use_payment_terminal != 'jeko_soundbox'" 
                        required="use_payment_terminal == 'jeko_soundbox'"
                        password="True"/>
                <field name="jeko_soundbox_payment_method" 
                        invisible="use_payment_terminal != 'jeko_soundbox'" 
                        required="use_payment_terminal == 'jeko_soundbox'"/>
                <field name="jeko_soundbox_latest_response" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
