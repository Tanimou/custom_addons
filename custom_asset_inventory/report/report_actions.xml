<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ================================================================== -->
    <!-- Rapport: Fiche de Contrôle d'Inventaire                           -->
    <!-- Report action and paper format definitions                         -->
    <!-- ================================================================== -->

    <!-- Paper Format for Control Sheet (A4 with margins) -->
    <record id="paperformat_fiche_controle" model="report.paperformat">
        <field name="name">Fiche de Contrôle A4</field>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">25</field>
        <field name="margin_bottom">20</field>
        <field name="margin_left">15</field>
        <field name="margin_right">15</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
    </record>

    <!-- Report Action: Fiche de Contrôle (Single Line) -->
    <record id="action_report_fiche_controle" model="ir.actions.report">
        <field name="name">Fiche de Contrôle</field>
        <field name="model">asset.inventory.line</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_asset_inventory.report_fiche_controle</field>
        <field name="report_file">custom_asset_inventory.report_fiche_controle</field>
        <field name="print_report_name">'Fiche_Controle_%s' % (object.display_name or 'Inventaire')</field>
        <field name="paperformat_id" ref="paperformat_fiche_controle"/>
        <field name="binding_model_id" ref="custom_asset_inventory.model_asset_inventory_line"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Report Action: Fiches de Contrôle (Campaign - All Lines) -->
    <record id="action_report_fiche_controle_campaign" model="ir.actions.report">
        <field name="name">Fiches de Contrôle (Campagne)</field>
        <field name="model">asset.inventory.campaign</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_asset_inventory.report_fiche_controle_campaign</field>
        <field name="report_file">custom_asset_inventory.report_fiche_controle_campaign</field>
        <field name="print_report_name">'Fiches_Controle_%s' % (object.name or 'Campagne')</field>
        <field name="paperformat_id" ref="paperformat_fiche_controle"/>
        <field name="binding_model_id" ref="custom_asset_inventory.model_asset_inventory_campaign"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Report Action: Synthèse de Campagne -->
    <record id="action_report_campaign_summary" model="ir.actions.report">
        <field name="name">Synthèse de Campagne</field>
        <field name="model">asset.inventory.campaign</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_asset_inventory.report_campaign_summary</field>
        <field name="report_file">custom_asset_inventory.report_campaign_summary</field>
        <field name="print_report_name">'Synthese_%s' % (object.name or 'Campagne')</field>
        <field name="paperformat_id" ref="paperformat_fiche_controle"/>
        <field name="binding_model_id" ref="custom_asset_inventory.model_asset_inventory_campaign"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
