<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Bouton "Catalogue" dans la vue picking -->
        <record id="stock_picking_inherit_form_view" model="ir.ui.view">
            <field name="name">stock.picking.inherit.form.catalogue</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="before">
                    <group>
                        <button name="action_open_wizard"
                            string="Ajouter produits (multiple)"
                            type="object"
                            class="btn btn-secondary"/>
                    </group>
                </xpath>
            </field>
        </record>

        
    </data>
</odoo>
