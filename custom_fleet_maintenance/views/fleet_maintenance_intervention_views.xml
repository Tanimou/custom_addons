<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="fleet_maintenance_intervention_view_tree" model="ir.ui.view">
        <field name="name">fleet.maintenance.intervention.list</field>
        <field name="model">fleet.maintenance.intervention</field>
        <field name="arch" type="xml">
            <list decoration-success="state == 'done'" decoration-danger="state == 'cancelled'" decoration-warning="is_overdue">
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="intervention_type" widget="badge"/>
                <field name="state" widget="badge"/>
                <field name="scheduled_start" optional="show"/>
                <field name="responsible_id" optional="show"/>
                <field name="vendor_id" optional="hide"/>
                <field name="actual_total_amount" widget="monetary" optional="show"/>
            </list>
        </field>
    </record>

    <record id="fleet_maintenance_intervention_view_kanban" model="ir.ui.view">
        <field name="name">fleet.maintenance.intervention.kanban</field>
        <field name="model">fleet.maintenance.intervention</field>
        <field name="arch" type="xml">
            <kanban default_group_by="intervention_type" class="o_kanban_small_column">
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="state"/>
                <field name="scheduled_start"/>
                <field name="is_overdue"/>
                <field name="actual_total_amount"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click o_kanban_record #{'bg-warning-200' if record.is_overdue.raw_value else ''}">
                            <div class="o_kanban_primary_left">
                                <strong t-esc="record.name.value"/>
                                <span class="badge bg-secondary ms-2" t-esc="record.intervention_type.value"/>
                            </div>
                            <div class="text-muted">
                                <span t-esc="record.vehicle_id.value"/>
                                <span class="ms-2" t-if="record.scheduled_start.raw_value">
                                    <i class="fa fa-calendar"/> <t t-esc="record.scheduled_start.value"/>
                                </span>
                            </div>
                            <div class="o_kanban_primary_bottom mt-2">
                                <span class="badge" t-att-class="record.state.value == 'done' and 'bg-success' or record.is_overdue.raw_value and 'bg-danger' or 'bg-info'">
                                    <t t-esc="record.state.value"/>
                                </span>
                                <span class="float-end" t-if="record.actual_total_amount.value">
                                    <t t-esc="record.actual_total_amount.value"/>
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="fleet_maintenance_intervention_view_form" model="ir.ui.view">
        <field name="name">fleet.maintenance.intervention.form</field>
        <field name="model">fleet.maintenance.intervention</field>
        <field name="arch" type="xml">
            <form string="Intervention de maintenance">
                <header>
                    <button name="action_submit" string="Soumettre" type="object" class="btn btn-primary" modifiers="{'invisible': [['state', '!=', 'draft']]}"/>
                    <button name="action_start" string="Démarrer" type="object" class="btn btn-secondary" groups="custom_fleet_maintenance.group_fleet_maintenance_manager" modifiers="{'invisible': [['state', '!=', 'submitted']]}"/>
                    <button name="action_done" string="Terminer" type="object" class="btn btn-success" groups="custom_fleet_maintenance.group_fleet_maintenance_manager" modifiers="{'invisible': [['state', '!=', 'in_progress']]}"/>
                    <button name="action_cancel" string="Annuler" type="object" class="btn btn-danger" groups="custom_fleet_maintenance.group_fleet_maintenance_manager" modifiers="{'invisible': [['state', 'not in', ['draft', 'submitted']]]}"/>
                    <button name="action_create_purchase_order" string="Créer une commande" type="object" class="btn btn-secondary" groups="custom_fleet_maintenance.group_fleet_maintenance_manager"/>
                    <button name="action_view_purchase_orders" string="Voir commandes" type="object" modifiers="{'invisible': [['purchase_order_count', '=', 0]]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,in_progress,done"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="intervention_type" invisible="1"/>
                            <field name="failure_type"/>
                            <field name="vehicle_id" options="{'no_create_edit': True}"/>
                            <field name="driver_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="plan_line_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="responsible_id"/>
                            <field name="technician_id"/>
                            <field name="vendor_id"/>
                            <field name="priority" widget="priority"/>
                            <field name="severity"/>
                            <field name="location_id"/>
                            <field name="picking_id" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="request_date"/>
                            <field name="scheduled_start" invisible="1"/>
                            <field name="scheduled_end" invisible="1"/>
                            <field name="actual_start" readonly="1"/>
                            <field name="actual_end" readonly="1"/>
                        </group>
                        <group>
                            <field name="odometer"/>
                            <field name="next_planned_date" invisible="1"/>
                            <field name="next_planned_odometer" invisible="1"/>
                            <field name="calendar_event_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" nolabel="1" widget="html"/>
                            <field name="failure_note"/>
                            <field name="document_ids" widget="many2many_binary" options="{'filename': 'name'}"/>
                        </page>
                        <page string="Rapport d'intervention" name="report_tab">
                            <group>
                                <field name="intervention_report" nolabel="1" widget="html" placeholder="Renseignez le rapport d'intervention à la clôture: travaux effectués, pièces remplacées, observations..."/>
                            </group>
                        </page>
                        <page string="Coûts">
                            <field name="part_line_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="cost_type"/>
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                    <field name="unit_price"/>
                                    <field name="subtotal" widget="monetary" readonly="1"/>
                                </list>
                            </field>
                            <group col="6">
                                <field name="part_amount" readonly="1" widget="monetary"/>
                                <field name="labor_amount" readonly="1" widget="monetary"/>
                                <field name="subcontract_amount" readonly="1" widget="monetary"/>
                                <field name="other_amount" readonly="1" widget="monetary"/>
                                <field name="purchase_amount" readonly="1" widget="monetary"/>
                                <field name="actual_total_amount" readonly="1" widget="monetary"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="fleet_maintenance_intervention_view_search" model="ir.ui.view">
        <field name="name">fleet.maintenance.intervention.search</field>
        <field name="model">fleet.maintenance.intervention</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="intervention_type" widget="selection"/>
                <field name="state" widget="selection"/>
                <filter string="Préventive" name="preventive" domain="[('intervention_type', '=', 'preventive')]"/>
                <filter string="Curative" name="curative" domain="[('intervention_type', '=', 'curative')]"/>
                <separator/>
                <filter string="Retard" name="overdue" domain="[('is_overdue', '=', True)]" help="Interventions en retard"/>
                <filter string="Avec commande" name="has_po" domain="[('purchase_order_count', '>', 0)]"/>
            </search>
        </field>
    </record>

    <record id="fleet_maintenance_intervention_view_pivot" model="ir.ui.view">
        <field name="name">fleet.maintenance.intervention.pivot</field>
        <field name="model">fleet.maintenance.intervention</field>
        <field name="arch" type="xml">
            <pivot string="Analyse interventions">
                <field name="vehicle_id" type="row"/>
                <field name="intervention_type" type="col"/>
                <field name="state" type="col"/>
                <field name="actual_total_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="fleet_maintenance_intervention_view_graph" model="ir.ui.view">
        <field name="name">fleet.maintenance.intervention.graph</field>
        <field name="model">fleet.maintenance.intervention</field>
        <field name="arch" type="xml">
            <graph string="Charges maintenance" type="bar">
                <field name="scheduled_start" type="row"/>
                <field name="intervention_type" type="col"/>
                <field name="actual_total_amount" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="fleet_maintenance_intervention_view_calendar" model="ir.ui.view">
        <field name="name">fleet.maintenance.intervention.calendar</field>
        <field name="model">fleet.maintenance.intervention</field>
        <field name="arch" type="xml">
            <calendar string="Planification maintenance" date_start="scheduled_start" date_stop="scheduled_end" color="intervention_type">
                <field name="name"/>
                <field name="vehicle_id"/>
                <field name="responsible_id"/>
            </calendar>
        </field>
    </record>

    <record id="fleet_maintenance_intervention_action" model="ir.actions.act_window">
        <field name="name">Interventions de maintenance</field>
        <field name="res_model">fleet.maintenance.intervention</field>
        <field name="view_mode">list,form,calendar,graph,pivot,kanban</field>
        <field name="search_view_id" ref="fleet_maintenance_intervention_view_search"/>
    </record>
</odoo>
