<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_fleet_intervention_analysis" model="ir.actions.act_window">
        <field name="name">Analyse interventions</field>
        <field name="res_model">fleet.maintenance.intervention</field>
        <field name="view_mode">pivot,graph,list</field>
        <field name="context">{'pivot_measures': ['actual_total_amount'], 'graph_measure': 'actual_total_amount'}</field>
    </record>

    <record id="action_fleet_intervention_overdue" model="ir.actions.act_window">
        <field name="name">Interventions en retard</field>
        <field name="res_model">fleet.maintenance.intervention</field>
        <field name="view_mode">list,graph</field>
        <field name="domain">[('is_overdue', '=', True)]</field>
    </record>

    <record id="action_fleet_plan_line_due" model="ir.actions.act_window">
        <field name="name">Plans a planifier</field>
        <field name="res_model">fleet.maintenance.plan.line</field>
        <field name="view_mode">list,graph</field>
        <field name="domain">[('state', '!=', 'ok')]</field>
    </record>

    <record id="action_fleet_dashboard" model="ir.actions.act_window">
        <field name="name">Tableau de bord maintenance</field>
        <field name="res_model">fleet.maintenance.intervention</field>
        <field name="view_mode">pivot,graph,list</field>
        <field name="context">{'pivot_measures': ['actual_total_amount'], 'graph_measure': 'actual_total_amount'}</field>
        <field name="help" type="html">
            <div class="o_view_nocontent_smiling_face">
                <p>Suivi des interventions preventives et curatives.</p>
            </div>
        </field>
    </record>
</odoo>
