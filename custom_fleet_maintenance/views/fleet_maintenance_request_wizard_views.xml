<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="fleet_maintenance_request_wizard_view_form" model="ir.ui.view">
        <field name="name">fleet.maintenance.request.wizard.form</field>
        <field name="model">fleet.maintenance.request.wizard</field>
        <field name="arch" type="xml">
            <form string="Declarer une panne" create="false" edit="false">
                <group>
                    <field name="vehicle_id" options="{'no_create': True}"/>
                    <field name="description" widget="text"/>
                </group>
                <footer>
                    <button name="action_create_request" type="object" string="Soumettre" class="btn btn-primary"/>
                    <button string="Annuler" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_fleet_maintenance_request_wizard" model="ir.actions.act_window">
        <field name="name">Declarer une panne</field>
        <field name="res_model">fleet.maintenance.request.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="fleet_maintenance_request_wizard_view_form"/>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>
</odoo>
