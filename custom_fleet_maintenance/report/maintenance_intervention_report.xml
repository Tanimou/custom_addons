<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_maintenance_intervention">
        <t t-call="web.external_layout">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <h2>Intervention de maintenance - <t t-esc="doc.name"/></h2>
                    <p>
                        <strong>Véhicule :</strong> <t t-esc="doc.vehicle_id.display_name"/>
                        &#160;|&#160;
                        <strong>Type :</strong> <t t-esc="dict(doc._fields['intervention_type'].selection).get(doc.intervention_type)"/>
                        &#160;|&#160;
                        <strong>Statut :</strong> <t t-esc="dict(doc._fields['state'].selection).get(doc.state)"/>
                    </p>
                    <p>
                        <strong>Responsable :</strong> <t t-esc="doc.responsible_id.display_name or 'N/A'"/>
                        &#160;|&#160;
                        <strong>Conducteur :</strong> <t t-esc="doc.driver_id.display_name or 'N/A'"/>
                        &#160;|&#160;
                        <strong>Plan préventif :</strong> <t t-esc="doc.plan_line_id.plan_id.name or 'N/A'"/>
                    </p>
                    <p>
                        <strong>Dates :</strong>
                        Demande <t t-esc="format_datetime(doc.request_date)"/> —
                        Début prévu <t t-esc="format_datetime(doc.scheduled_start)"/> —
                        Fin prévue <t t-esc="format_datetime(doc.scheduled_end)"/>
                    </p>
                    <h3>Description</h3>
                    <div t-if="doc.description" t-raw="doc.description"/>
                    <p t-if="doc.failure_note"><strong>Diagnostic :</strong> <t t-esc="doc.failure_note"/></p>
                    <h3>Coûts</h3>
                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>Description</th>
                                <th>Qté</th>
                                <th>PU</th>
                                <th>Montant</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="doc.part_line_ids" t-as="line">
                                <td><t t-esc="dict(line._fields['cost_type'].selection).get(line.cost_type)"/></td>
                                <td><t t-esc="line.description or line.product_id.display_name"/></td>
                                <td class="text-end"><t t-esc="line.quantity"/></td>
                                <td class="text-end"><t t-esc="format_amount(line.unit_price, doc.company_id.currency_id)"/></td>
                                <td class="text-end"><t t-esc="format_amount(line.subtotal, doc.company_id.currency_id)"/></td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="4" class="text-end"><strong>Total</strong></td>
                                <td class="text-end"><strong><t t-esc="format_amount(doc.actual_total_amount, doc.company_id.currency_id)"/></strong></td>
                            </tr>
                        </tfoot>
                    </table>
                    <div class="row mt32">
                        <div class="col-6">
                            <p><strong>Signature responsable</strong></p>
                            <div class="o_signature" style="height:80px;"></div>
                        </div>
                        <div class="col-6">
                            <p><strong>Signature prestataire</strong></p>
                            <div class="o_signature" style="height:80px;"></div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <report
        id="maintenance_intervention_report_action"
        model="fleet.maintenance.intervention"
        string="Ordre d'intervention"
        report_type="qweb-pdf"
        name="custom_fleet_maintenance.report_maintenance_intervention"
        file="custom_fleet_maintenance.report_maintenance_intervention"
    />
</odoo>
