<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 
        Seed data: Example consumption targets by vehicle category
        These are typical L/100km targets for common vehicle types
    -->

        <!-- 
            Note: This data assumes the categories exist from native fleet module.
            If categories don't exist, they will be created here as examples.
        -->
        
        <!-- Example Category: Utility Vehicles (Utilitaires) -->
        <record id="category_utility_target" model="fleet.vehicle.model.category">
            <field name="name">Utilitaires</field>
            <field name="sequence">10</field>
            <field name="target_consumption_l100km">9.5</field>
            <field name="target_consumption_notes">Cible standard pour véhicules utilitaires légers (fourgonnettes, pick-ups). Basé sur les moyennes constructeurs + 15% usage professionnel.</field>
        </record>

        <!-- Example Category: Trucks (Poids Lourds) -->
        <record id="category_truck_target" model="fleet.vehicle.model.category">
            <field name="name">Poids Lourds</field>
            <field name="sequence">20</field>
            <field name="target_consumption_l100km">32.0</field>
            <field name="target_consumption_notes">Cible pour camions porteurs et tracteurs routiers. Variable selon tonnage et type de transport.</field>
        </record>

        <!-- Example Category: Cars (Voitures de service) -->
        <record id="category_car_target" model="fleet.vehicle.model.category">
            <field name="name">Voitures de service</field>
            <field name="sequence">5</field>
            <field name="target_consumption_l100km">7.0</field>
            <field name="target_consumption_notes">Cible pour véhicules de fonction et voitures de service. Usage mixte urbain/routier.</field>
        </record>

        <!-- Example Category: Construction Equipment (Engins de chantier) -->
        <record id="category_construction_target" model="fleet.vehicle.model.category">
            <field name="name">Engins de chantier</field>
            <field name="sequence">30</field>
            <field name="target_consumption_l100km">45.0</field>
            <field name="target_consumption_notes">Cible pour engins de chantier (pelleteuses, chargeurs). Très variable selon l'utilisation - valeur indicative moyenne.</field>
        </record>

        <!-- Example Category: Refrigerated (Frigorifiques) -->
        <record id="category_refrigerated_target" model="fleet.vehicle.model.category">
            <field name="name">Frigorifiques</field>
            <field name="sequence">15</field>
            <field name="target_consumption_l100km">12.0</field>
            <field name="target_consumption_notes">Cible pour véhicules frigorifiques. Inclut surconsommation du groupe froid (~20% additionnels).</field>
        </record>

</odoo>
