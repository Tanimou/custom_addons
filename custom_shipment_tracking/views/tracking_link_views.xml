<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- =================================================================== -->
    <!-- TREE VIEW - Liens de suivi                                          -->
    <!-- =================================================================== -->
    <record id="tracking_link_view_tree" model="ir.ui.view">
        <field name="name">shipment.tracking.link.view.tree</field>
        <field name="model">shipment.tracking.link</field>
        <field name="arch" type="xml">
            <list string="Liens de suivi"
                  decoration-muted="not is_active"
                  decoration-success="is_active">
                <field name="shipment_request_id" string="Expédition"/>
                <field name="partner_id" string="Client"/>
                <field name="parcel_count" string="Colis"/>
                <field name="url" string="URL de suivi" widget="CopyClipboardChar"/>
                <field name="is_active" string="Actif" widget="boolean_toggle"/>
                <field name="access_count" string="Nb accès"/>
                <field name="last_access" string="Dernier accès"/>
            </list>
        </field>
    </record>

    <!-- =================================================================== -->
    <!-- FORM VIEW - Liens de suivi                                          -->
    <!-- =================================================================== -->
    <record id="tracking_link_view_form" model="ir.ui.view">
        <field name="name">shipment.tracking.link.view.form</field>
        <field name="model">shipment.tracking.link</field>
        <field name="arch" type="xml">
            <form string="Lien de suivi">
                <header>
                    <button name="action_deactivate"
                            string="Désactiver le lien"
                            type="object"
                            class="btn-secondary"
                            confirm="Êtes-vous sûr de vouloir désactiver ce lien de suivi ?"
                            invisible="not is_active"/>
                    <button name="action_regenerate_token"
                            string="Régénérer le token"
                            type="object"
                            class="btn-secondary"
                            confirm="Attention : régénérer le token invalidera l'URL actuelle. Continuer ?"
                            groups="base.group_system"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_parcels"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-cubes">
                            <field name="parcel_count" widget="statinfo" string="Colis"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Inactif" bg_color="text-bg-secondary"
                            invisible="is_active"/>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1" placeholder="Lien de suivi"/>
                        </h1>
                    </div>
                    <group>
                        <group name="shipment_info" string="Informations expédition">
                            <field name="shipment_request_id" string="Expédition"/>
                            <field name="partner_id" string="Client"/>
                            <field name="parcel_count" string="Nombre de colis"/>
                        </group>
                        <group name="token_info" string="Token de suivi">
                            <field name="token" string="Token"/>
                            <field name="is_active" string="Actif" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <group>
                        <group name="url_section" string="URL de suivi">
                            <field name="url" string="URL" widget="CopyClipboardChar"/>
                        </group>
                        <group name="stats" string="Statistiques d'accès">
                            <field name="access_count" string="Nombre d'accès"/>
                            <field name="last_access" string="Dernier accès"/>
                        </group>
                    </group>
                    <group name="company" string="Société" groups="base.group_multi_company">
                        <field name="company_id" string="Société" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- =================================================================== -->
    <!-- SEARCH VIEW - Liens de suivi                                        -->
    <!-- =================================================================== -->
    <record id="tracking_link_view_search" model="ir.ui.view">
        <field name="name">shipment.tracking.link.view.search</field>
        <field name="model">shipment.tracking.link</field>
        <field name="arch" type="xml">
            <search string="Rechercher des liens de suivi">
                <!-- Champs de recherche -->
                <field name="token" string="Token"/>
                <field name="shipment_request_id" string="Expédition"/>
                <field name="partner_id" string="Client"/>

                <!-- Filtres par statut -->
                <separator/>
                <filter name="filter_active"
                        string="Actifs"
                        domain="[('is_active', '=', True)]"/>
                <filter name="filter_inactive"
                        string="Inactifs"
                        domain="[('is_active', '=', False)]"/>

                <!-- Filtres par accès -->
                <separator/>
                <filter name="filter_accessed"
                        string="Déjà accédés"
                        domain="[('access_count', '>', 0)]"/>
                <filter name="filter_never_accessed"
                        string="Jamais accédés"
                        domain="[('access_count', '=', 0)]"/>

                <!-- Regroupements -->
                <!-- <group expand="0" string="Regrouper par">
                    <filter name="groupby_shipment"
                            string="Expédition"
                            context="{'group_by': 'shipment_request_id'}"/>
                    <filter name="groupby_partner"
                            string="Client" -->
                            <!-- context="{'group_by': 'partner_id'}"/> -->
                <!-- </group> -->
            </search>
        </field>
    </record>

    <!-- =================================================================== -->
    <!-- ACTION - Liens de suivi                                             -->
    <!-- =================================================================== -->
    <record id="action_tracking_link" model="ir.actions.act_window">
        <field name="name">Liens de suivi</field>
        <field name="res_model">shipment.tracking.link</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="tracking_link_view_search"/>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucun lien de suivi disponible
            </p>
            <p>
                Les liens de suivi permettent à vos clients de suivre les colis
                d'une expédition via une page publique unique sans authentification.
                Un lien par expédition permet au client de voir tous les colis de cette expédition.
            </p>
        </field>
    </record>

</odoo>
