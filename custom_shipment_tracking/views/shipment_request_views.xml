<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- =========================== -->
    <!-- TREE VIEW                   -->
    <!-- =========================== -->
    <record id="shipment_request_view_tree" model="ir.ui.view">
        <field name="name">shipment.request.view.tree</field>
        <field name="model">shipment.request</field>
        <field name="arch" type="xml">
            <list string="Demandes d'expÃ©dition" create="false" decoration-info="state == 'registered'" decoration-warning="state == 'grouping'" decoration-success="state == 'delivered'">
                <field name="name"/>
                <field name="shipment_type" widget="badge" decoration-info="shipment_type == 'fret'" decoration-warning="shipment_type == 'groupage'"/>
                <field name="partner_id"/>
                <field name="destination_country_id"/>
                <field name="destination_city" optional="show"/>
                <field name="transport_mode"/>
                <field name="planned_date"/>
                <field name="parcel_count"/>
                <field name="state" widget="badge" decoration-info="state == 'registered'" decoration-warning="state in ('grouping', 'in_transit')" decoration-success="state in ('arrived', 'delivered')"/>
                <field name="company_id" optional="hide" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- =========================== -->
    <!-- FORM VIEW                   -->
    <!-- =========================== -->
    <record id="shipment_request_view_form" model="ir.ui.view">
        <field name="name">shipment.request.view.form</field>
        <field name="model">shipment.request</field>
        <field name="arch" type="xml">
            <form string="Demande d'expÃ©dition">
                <header>
                    <!-- Groupage workflow: Passer en groupage (only for Groupage type) -->
                    <button name="action_set_grouping" type="object" string="Passer en groupage" 
                            class="btn-primary" 
                            invisible="shipment_type != 'groupage' or state != 'registered'"/>
                    
                    <!-- PrÃªt pour envoi - Fret: from registered, requires documents -->
                    <button name="action_ready_for_transit" type="object" string="PrÃªt pour envoi" 
                            class="btn-success"
                            invisible="shipment_type != 'fret' or state != 'registered' or not all_docs_validated or proforma_state != 'confirmed'"
                            title="Fret: Passer en transit (documents requis)"/>
                    
                    <!-- PrÃªt pour envoi - Groupage: from grouping, NO documents required -->
                    <button name="action_ready_for_transit" type="object" string="PrÃªt pour envoi" 
                            class="btn-success"
                            invisible="shipment_type != 'groupage' or state != 'grouping' or proforma_state != 'confirmed'"
                            title="Groupage: Passer en transit (documents optionnels)"/>
                    
                    <button name="action_set_arrived" type="object" string="Marquer arrivÃ©" class="btn-primary" invisible="state != 'in_transit'"/>
                    <button name="action_set_delivered" type="object" string="Marquer livrÃ©" class="btn-primary" invisible="state != 'arrived'"/>
                    <button name="action_generate_tracking_link" type="object" string="GÃ©nÃ©rer liens de suivi" class="btn-secondary" invisible="parcel_count == 0 or tracking_link_id"/>
                     <!-- Proforma / Invoice buttons -->
                    <button name="action_create_proforma" type="object" string="CrÃ©er Proforma" class="btn-secondary" 
                            invisible="proforma_state != 'none' or parcel_count == 0"
                            title="CrÃ©er un proforma avec les dÃ©tails des colis et frais de transport"/>
                    <!-- Document buttons - Important for Fret, optional for Groupage -->
                    <button name="action_generate_documents" type="object" string="GÃ©nÃ©rer Documents" class="btn-secondary"
                            invisible="document_count > 0 or shipment_type == 'groupage'"
                            title="GÃ©nÃ©rer les documents requis (FDI, DCVI, DÃ©claration, LTA)"/>
                    
                    <!-- Statusbar: Show all states, visual feedback handled by type -->
                    <field name="state" widget="statusbar" statusbar_visible="registered,grouping,in_transit,arrived,delivered"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Smart button for documents -->
                        <button name="action_view_documents" type="object" class="oe_stat_button" icon="fa-file-text-o"
                                invisible="document_count == 0">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="docs_validated_count"/>/<field name="document_count"/>
                                </span>
                                <span class="o_stat_text">Documents</span>
                            </div>
                        </button>
                        <!-- Smart button for invoices -->
                        <button name="action_view_invoices" type="object" class="oe_stat_button" icon="fa-money"
                                invisible="invoice_count == 0">
                            <field name="invoice_count" widget="statinfo" string="Factures"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Fret" bg_color="text-bg-info" invisible="shipment_type != 'fret'"/>
                    <widget name="web_ribbon" title="Groupage" bg_color="text-bg-warning" invisible="shipment_type != 'groupage'"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group name="client_info" string="Informations client">
                            <field name="partner_id"/>
                            <field name="partner_shipping_id" context="{'default_parent_id': partner_id, 'default_type': 'delivery'}"/>
                            <field name="sale_order_ids" widget="many2many_tags" readonly="1"/>
                        </group>
                        <group name="destination_info" string="Destination">
                            <field name="destination_country_id"/>
                            <field name="destination_city"/>
                        </group>
                    </group>
                    <group>
                        <group name="transport_info" string="Transport">
                            <field name="shipment_type" widget="radio" readonly="state != 'registered'"/>
                            <field name="transport_mode" widget="radio"/>
                            <field name="main_parcel_number"/>
                            <field name="airline_name" placeholder="ex: Sky Mali"/>
                            <field name="lta_number" placeholder="NumÃ©ro LTA"/>
                            <field name="nature_colis"/>
                        </group>
                        <group name="dates_info" string="Dates et suivi">
                            <field name="planned_date"/>
                            <field name="tracking_link_id" readonly="1"/>
                            <field name="tracking_url" widget="url" readonly="1"/>
                        </group>
                    </group>
                    <group name="company_info" groups="base.group_multi_company">
                        <field name="company_id"/>
                    </group>

                    <notebook>
                        <page string="Colis" name="parcels">
                            <div class="mb-2" invisible="state not in ('registered', 'grouping')">
                                <button name="action_open_bulk_create_wizard" 
                                        type="object" 
                                        string="Creer colis en masse" 
                                        icon="fa-plus-circle"
                                        class="btn-secondary"
                                        title="Creer plusieurs colis en une seule fois"/>
                            </div>
                            <field name="parcel_ids" nolabel="1"
                                   readonly="state not in ('registered', 'grouping')">
                                <list string="Colis" editable="bottom"
                                      decoration-info="state == 'registered'"
                                      decoration-warning="state == 'grouping'"
                                      decoration-primary="state == 'in_transit'"
                                      decoration-success="state in ('arrived', 'delivered')">
                                    <field name="name" readonly="1"/>
                                    <field name="main_number" readonly="1"/>
                                    <field name="sequence" readonly="1"/>
                                    <field name="weight"/>
                                    <field name="product_summary" string="Produits" readonly="1"/>
                                    <field name="product_count" string="Nb produits" optional="hide" readonly="1"/>
                                    <field name="total_value" string="Valeur produits" optional="hide" readonly="1"/>
                                    <field name="content_description"/>
                                    <field name="declared_value" optional="hide"/>
                                    <field name="transport_mode" optional="hide"/>
                                    <field name="destination_country_id" optional="hide"/>
                                    <field name="state" widget="badge"
                                           decoration-info="state == 'registered'"
                                           decoration-warning="state == 'grouping'"
                                           decoration-primary="state == 'in_transit'"
                                           decoration-success="state in ('arrived', 'delivered')"/>
                                    <button name="action_open_product_wizard" 
                                            type="object" 
                                            string="Produits" 
                                            icon="fa-cubes"
                                            title="GÃ©rer les produits du colis"/>
                                </list>
                            </field>
                        </page>
                        <page string="Transport aÃ©rien" name="air_transport" invisible="transport_mode != 'air'">
                            <group>
                                <group string="Informations de vol">
                                    <field name="air_flight_number"/>
                                    <field name="air_departure_datetime"/>
                                </group>
                                <group string="AÃ©roports">
                                    <field name="air_departure_airport"/>
                                    <field name="air_arrival_airport"/>
                                </group>
                            </group>
                        </page>
                        <page string="Transport maritime" name="sea_transport" invisible="transport_mode != 'sea'">
                            <group>
                                <group string="Informations navire">
                                    <field name="sea_vessel_name"/>
                                    <field name="sea_container_number"/>
                                    <field name="sea_embarkation_date"/>
                                </group>
                                <group string="Ports">
                                    <field name="sea_departure_port"/>
                                    <field name="sea_arrival_port"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" nolabel="1" placeholder="Notes internes concernant cette expÃ©dition..."/>
                        </page>
                        <page string="Facturation" name="invoicing">
                            <group>
                                <group name="invoicing_info" string="Informations de facturation">
                                    <field name="proforma_state" readonly="1"/>
                                    <field name="proforma_invoice_id" readonly="1"/>
                                    <field name="invoice_id" readonly="1"/>
                                </group>
                                <group name="transport_fees" string="Frais de transport">
                                    <field name="total_weight" readonly="1"/>
                                    <field name="total_declared_value" readonly="1"/>
                                    <field name="transport_fee_rate"/>
                                    <field name="transport_fee" readonly="0"/>
                                </group>
                            </group>
                            <group>
                                <group name="additional_fees" string="Frais supplÃ©mentaires">
                                    <field name="customs_fees"/>
                                    <field name="service_fees"/>
                                </group>
                                <group name="document_status" string="Ã‰tat des documents">
                                    <field name="document_count" readonly="1"/>
                                    <field name="docs_validated_count" readonly="1"/>
                                    <field name="all_docs_validated" readonly="1"/>
                                    <div colspan="2" class="alert alert-info" role="alert" invisible="shipment_type != 'fret'">
                                        <i class="fa fa-info-circle"/> <strong>Type Fret:</strong> Documents requis avant transit.
                                    </div>
                                    <div colspan="2" class="alert alert-warning" role="alert" invisible="shipment_type != 'groupage'">
                                        <i class="fa fa-info-circle"/> <strong>Type Groupage:</strong> Documents optionnels.
                                    </div>
                                </group>
                            </group>
                        </page>
                        <page string="Documents" name="documents" invisible="document_count == 0">
                            <field name="document_ids" nolabel="1" readonly="1">
                                <list decoration-danger="state == 'to_prepare'" 
                                      decoration-warning="state == 'in_progress'"
                                      decoration-info="state == 'ready'"
                                      decoration-success="state == 'validated'">
                                    <field name="name"/>
                                    <field name="document_type"/>
                                    <field name="reference"/>
                                    <field name="state" widget="badge"/>
                                    <field name="responsible_id" widget="many2one_avatar_user"/>
                                    <field name="deadline"/>
                                    <field name="attachment_count" string="ðŸ“Ž"/>
                                    <button name="action_view_attachments" type="object" icon="fa-paperclip" title="Voir piÃ¨ces jointes"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- =========================== -->
    <!-- SEARCH VIEW                 -->
    <!-- =========================== -->
    <record id="shipment_request_view_search" model="ir.ui.view">
        <field name="name">shipment.request.view.search</field>
        <field name="model">shipment.request</field>
        <field name="arch" type="xml">
            <search string="Rechercher des expÃ©ditions">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="destination_country_id"/>
                <field name="destination_city"/>
                <field name="main_parcel_number"/>
                <separator/>
                <filter string="Type Fret" name="filter_fret" domain="[('shipment_type', '=', 'fret')]"/>
                <filter string="Type Groupage" name="filter_groupage" domain="[('shipment_type', '=', 'groupage')]"/>
                <separator/>
                <filter string="EnregistrÃ©" name="filter_registered" domain="[('state', '=', 'registered')]"/>
                <filter string="Groupage" name="filter_grouping" domain="[('state', '=', 'grouping')]"/>
                <filter string="En transit" name="filter_in_transit" domain="[('state', '=', 'in_transit')]"/>
                <filter string="ArrivÃ©" name="filter_arrived" domain="[('state', '=', 'arrived')]"/>
                <filter string="LivrÃ©" name="filter_delivered" domain="[('state', '=', 'delivered')]"/>
                <separator/>
                <filter string="Transport aÃ©rien" name="filter_air" domain="[('transport_mode', '=', 'air')]"/>
                <filter string="Transport maritime" name="filter_sea" domain="[('transport_mode', '=', 'sea')]"/>
                <separator/>
                <filter string="Ma sociÃ©tÃ©" name="filter_my_company" domain="[('company_id', '=', company_id)]" groups="base.group_multi_company"/>
                <!-- <group expand="0" string="Grouper par">
                    <filter string="Type" name="groupby_type" context="{'group_by': 'shipment_type'}"/>
                    <filter string="Statut" name="groupby_state" context="{'group_by': 'state'}"/>
                    <filter string="Mode de transport" name="groupby_transport_mode" context="{'group_by': 'transport_mode'}"/>
                    <filter string="Client" name="groupby_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Pays de destination" name="groupby_country" context="{'group_by': 'destination_country_id'}"/>
                    <filter string="Date prÃ©vue" name="groupby_planned_date" context="{'group_by': 'planned_date'}"/>
                    <filter string="SociÃ©tÃ©" name="groupby_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group> -->
            </search>
        </field>
    </record>

    <!-- =========================== -->
    <!-- KANBAN VIEW                 -->
    <!-- =========================== -->
    <record id="shipment_request_view_kanban" model="ir.ui.view">
        <field name="name">shipment.request.view.kanban</field>
        <field name="model">shipment.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" sample="1" create="false" group_create="0" on_create="quick_create">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="destination_country_id"/>
                <field name="destination_city"/>
                <field name="transport_mode"/>
                <field name="shipment_type"/>
                <field name="state" options="{'group_by_tooltip': {'selection': 'state'}}" groups_draggable="1"/>
                <field name="planned_date"/>
                <field name="parcel_count"/>
                <field name="parcel_references"/>
                <field name="tracking_url"/>
                <progressbar field="state" colors='{"registered": "info", "grouping": "warning", "in_transit": "warning", "arrived": "success", "delivered": "success"}'/>
                <templates>
                    <t t-name="card">
                        <div class="o_kanban_card_header">
                            <div class="o_kanban_card_header_title">
                                <strong><field name="name"/></strong>
                            </div>
                        </div>
                        <div class="o_kanban_card_content">
                            <!-- Shipment Type Badge -->
                            <div class="mb-1">
                                <t t-if="record.shipment_type.raw_value == 'fret'">
                                    <span class="badge text-bg-info">
                                        <i class="fa fa-truck me-1"/>Fret
                                    </span>
                                </t>
                                <t t-if="record.shipment_type.raw_value == 'groupage'">
                                    <span class="badge text-bg-warning">
                                        <i class="fa fa-cubes me-1"/>Groupage
                                    </span>
                                </t>
                            </div>
                            <div class="mb-1">
                                <i class="fa fa-user me-1" title="Client"/>
                                <field name="partner_id"/>
                            </div>
                            <div class="mb-1">
                                <i class="fa fa-map-marker me-1" title="Destination"/>
                                <field name="destination_country_id"/>
                                <t t-if="record.destination_city.raw_value">
                                    - <field name="destination_city"/>
                                </t>
                            </div>
                            <div class="mb-1">
                                <t t-if="record.transport_mode.raw_value == 'air'">
                                    <span class="badge text-bg-secondary">
                                        <i class="fa fa-plane me-1"/>AÃ©rien
                                    </span>
                                </t>
                                <t t-if="record.transport_mode.raw_value == 'sea'">
                                    <span class="badge text-bg-secondary">
                                        <i class="fa fa-ship me-1"/>Maritime
                                    </span>
                                </t>
                            </div>
                            <!-- Parcel references -->
                            <div class="mb-1" t-if="record.parcel_references.raw_value">
                                <i class="fa fa-cubes me-1" title="RÃ©fÃ©rences colis"/>
                                <span class="text-muted small"><field name="parcel_references"/></span>
                            </div>
                        </div>
                        <footer class="pt-2">
                            <div class="d-flex justify-content-between align-items-center w-100">
                                <span t-if="record.planned_date.raw_value" class="text-muted small">
                                    <i class="fa fa-calendar me-1"/>
                                    <field name="planned_date"/>
                                </span>
                                <span class="badge text-bg-secondary">
                                    <i class="fa fa-cube me-1"/>
                                    <field name="parcel_count"/> colis
                                </span>
                            </div>
                        </footer>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>
