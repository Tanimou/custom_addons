<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================== -->
    <!-- Sale Order Form View Extension             -->
    <!-- Add smart button for shipment requests     -->
    <!-- ========================================== -->
    
    <record id="sale_order_view_form_shipment_button" model="ir.ui.view">
        <field name="name">sale.order.form.shipment.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <!-- Add shipment request smart button in button_box -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_shipment_requests" type="object" 
                        class="oe_stat_button" icon="fa-truck"
                        invisible="shipment_request_count == 0">
                    <field name="shipment_request_count" widget="statinfo" string="ExpÃ©ditions"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
