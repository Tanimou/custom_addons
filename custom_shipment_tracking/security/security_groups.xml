<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Privilege (replaces ir.module.category for res.groups in Odoo 19) -->
    <record id="module_category_shipment" model="res.groups.privilege">
        <field name="name">Expéditions</field>
        <field name="description">Gestion des expéditions aériennes et maritimes</field>
        <field name="sequence">50</field>
    </record>

    <record id="group_shipment_user" model="res.groups">
        <field name="name">Utilisateur Logistique</field>
        <field name="privilege_id" ref="module_category_shipment"/>
        <field name="comment">Peut créer et modifier les demandes d'expédition et les colis</field>
    </record>

    <record id="group_shipment_manager" model="res.groups">
        <field name="name">Responsable Logistique</field>
        <field name="privilege_id" ref="module_category_shipment"/>
        <field name="implied_ids" eval="[(4, ref('group_shipment_user'))]"/>
        <field name="comment">Accès complet aux expéditions, y compris suppression et configuration</field>
    </record>

    <!-- ==================== Record Rules ==================== -->

    <!-- Multi-company rule: Users can only see shipments from their company -->
    <record id="rule_shipment_request_multi_company" model="ir.rule">
        <field name="name">Demande d'expédition: Multi-société</field>
        <field name="model_id" ref="model_shipment_request"/>
        <field name="domain_force">[
            '|',
            ('company_id', '=', False),
            ('company_id', 'in', company_ids)
        ]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="rule_shipment_parcel_multi_company" model="ir.rule">
        <field name="name">Colis: Multi-société</field>
        <field name="model_id" ref="model_shipment_parcel"/>
        <field name="domain_force">[
            '|',
            ('company_id', '=', False),
            ('company_id', 'in', company_ids)
        ]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="rule_tracking_link_multi_company" model="ir.rule">
        <field name="name">Lien de suivi: Multi-société</field>
        <field name="model_id" ref="model_shipment_tracking_link"/>
        <field name="domain_force">[
            '|',
            ('company_id', '=', False),
            ('company_id', 'in', company_ids)
        ]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="rule_tracking_event_multi_company" model="ir.rule">
        <field name="name">Événement de suivi: Multi-société</field>
        <field name="model_id" ref="model_shipment_tracking_event"/>
        <field name="domain_force">[
            '|',
            ('company_id', '=', False),
            ('company_id', 'in', company_ids)
        ]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <!-- Manager-only delete rule for shipment requests -->
    <record id="rule_shipment_request_unlink_manager" model="ir.rule">
        <field name="name">Demande d'expédition: Suppression (Responsable seulement)</field>
        <field name="model_id" ref="model_shipment_request"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_shipment_manager'))]"/>
        <field name="perm_read" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="True"/>
    </record>

</odoo>
