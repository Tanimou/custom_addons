<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- ========== FLEET MISSION EXPENSE VIEWS ========== -->
    
    <!-- Tree View -->
    <record id="fleet_mission_expense_view_tree" model="ir.ui.view">
        <field name="name">fleet.mission.expense.view.tree</field>
        <field name="model">fleet.mission.expense</field>
        <field name="arch" type="xml">
            <list string="Dépenses Mission" 
                  decoration-info="state == 'draft'"
                  decoration-warning="state == 'submitted'"
                  decoration-success="state == 'approved'"
                  decoration-danger="state == 'rejected'"
                  default_order="date desc">
                <field name="name"/>
                <field name="date"/>
                <field name="mission_id"/>
                <field name="vehicle_id" optional="show"/>
                <field name="expense_type"/>
                <field name="description" optional="show"/>
                <field name="vendor_id" optional="hide"/>
                <field name="amount" sum="Total"/>
                <field name="currency_id" column_invisible="True"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'submitted'"
                       decoration-success="state == 'approved'"
                       decoration-danger="state == 'rejected'"/>
                <field name="analytic_account_id" optional="hide"/>
            </list>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="fleet_mission_expense_view_form" model="ir.ui.view">
        <field name="name">fleet.mission.expense.view.form</field>
        <field name="model">fleet.mission.expense</field>
        <field name="arch" type="xml">
            <form string="Dépense Mission">
                <header>
                    <button name="action_submit" string="Soumettre" type="object" 
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_approve" string="Approuver" type="object"
                            class="btn-success"
                            invisible="state != 'submitted'"
                            groups="custom_fleet_management.group_fleet_manager"/>
                    <button name="action_reject" string="Refuser" type="object"
                            class="btn-danger"
                            invisible="state not in ('draft', 'submitted')"
                            groups="custom_fleet_management.group_fleet_manager"/>
                    <button name="action_reset_to_draft" string="Remettre en Brouillon" type="object"
                            invisible="state not in ('submitted', 'rejected')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_attachments" type="object"
                                class="oe_stat_button" icon="fa-paperclip"
                                invisible="attachment_count == 0">
                            <field name="attachment_count" widget="statinfo" string="Pièces"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Approuvé" bg_color="text-bg-success" invisible="state != 'approved'"/>
                    <widget name="web_ribbon" title="Refusé" bg_color="text-bg-danger" invisible="state != 'rejected'"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group name="main">
                            <field name="mission_id" options="{'no_create': True}"/>
                            <field name="vehicle_id"/>
                            <field name="expense_type" widget="selection"/>
                            <field name="date"/>
                        </group>
                        <group name="amount">
                            <field name="amount"/>
                            <field name="currency_id" groups="base.group_multi_currency"/>
                            <field name="vendor_id" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <group name="details">
                        <group name="description">
                            <field name="description" placeholder="Description de la dépense..."/>
                        </group>
                        <group name="analytic">
                            <field name="analytic_account_id" 
                                   options="{'no_create': True}"
                                   groups="analytic.group_analytic_accounting"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Justificatifs" name="attachments">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Notes et remarques..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="fleet_mission_expense_view_search" model="ir.ui.view">
        <field name="name">fleet.mission.expense.view.search</field>
        <field name="model">fleet.mission.expense</field>
        <field name="arch" type="xml">
            <search string="Recherche Dépenses">
                <field name="name"/>
                <field name="mission_id"/>
                <field name="vehicle_id"/>
                <field name="vendor_id"/>
                <field name="description"/>
                <separator/>
                <filter name="filter_draft" string="Brouillon" domain="[('state', '=', 'draft')]"/>
                <filter name="filter_submitted" string="Soumis" domain="[('state', '=', 'submitted')]"/>
                <filter name="filter_approved" string="Approuvé" domain="[('state', '=', 'approved')]"/>
                <filter name="filter_rejected" string="Refusé" domain="[('state', '=', 'rejected')]"/>
                <separator/>
                <filter name="filter_toll" string="Péages" domain="[('expense_type', '=', 'toll')]"/>
                <filter name="filter_fuel" string="Carburant" domain="[('expense_type', '=', 'fuel')]"/>
                <filter name="filter_maintenance" string="Entretien" domain="[('expense_type', '=', 'maintenance')]"/>
                <filter name="filter_other" string="Autres" domain="[('expense_type', 'in', ['parking', 'accommodation', 'meal', 'other'])]"/>
                <separator/>
                <filter name="filter_this_month" string="Ce Mois" 
                        domain="[('date', '>=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('date', '&lt;', (context_today() + relativedelta(months=1, day=1)).strftime('%Y-%m-%d'))]"/>
                <filter name="filter_last_month" string="Mois Dernier"
                        domain="[('date', '>=', (context_today() - relativedelta(months=1, day=1)).strftime('%Y-%m-%d')),
                                 ('date', '&lt;', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <!-- <group expand="0" string="Regrouper par">
                    <filter name="group_mission" string="Mission" context="{'group_by': 'mission_id'}"/>
                    <filter name="group_vehicle" string="Véhicule" context="{'group_by': 'vehicle_id'}"/>
                    <filter name="group_type" string="Type" context="{'group_by': 'expense_type'}"/>
                    <filter name="group_vendor" string="Fournisseur" context="{'group_by': 'vendor_id'}"/>
                    <filter name="group_state" string="État" context="{'group_by': 'state'}"/>
                    <filter name="group_date" string="Date" context="{'group_by': 'date:month'}"/>
                    <filter name="group_analytic" string="Compte Analytique" context="{'group_by': 'analytic_account_id'}"/>
                </group> -->
            </search>
        </field>
    </record>
    
    <!-- Pivot View -->
    <record id="fleet_mission_expense_view_pivot" model="ir.ui.view">
        <field name="name">fleet.mission.expense.view.pivot</field>
        <field name="model">fleet.mission.expense</field>
        <field name="arch" type="xml">
            <pivot string="Analyse Dépenses" sample="1">
                <field name="expense_type" type="row"/>
                <field name="mission_id" type="row"/>
                <field name="amount" type="measure"/>
                <field name="date" interval="month" type="col"/>
            </pivot>
        </field>
    </record>
    
    <!-- Graph View -->
    <record id="fleet_mission_expense_view_graph" model="ir.ui.view">
        <field name="name">fleet.mission.expense.view.graph</field>
        <field name="model">fleet.mission.expense</field>
        <field name="arch" type="xml">
            <graph string="Dépenses par Type" type="bar" sample="1">
                <field name="expense_type"/>
                <field name="amount" type="measure"/>
            </graph>
        </field>
    </record>
    
    <!-- Action -->
    <record id="action_fleet_mission_expense" model="ir.actions.act_window">
        <field name="name">Dépenses Mission</field>
        <field name="res_model">fleet.mission.expense</field>
        <field name="view_mode">list,form,pivot,graph</field>
        <field name="search_view_id" ref="fleet_mission_expense_view_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle dépense de mission
            </p>
            <p>
                Enregistrez les frais de péage, carburant, entretien et autres dépenses liées aux missions.
            </p>
        </field>
    </record>
    
    <!-- Menu under SCORE > Coûts -->
    <menuitem id="menu_fleet_mission_expense"
              name="Dépenses Mission"
              parent="custom_score_base.menu_score_costs"
              action="action_fleet_mission_expense"
              sequence="20"/>

</odoo>
