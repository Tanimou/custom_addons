        <!-- ========== SCORE MISSION COST RECORD RULES ========== -->
        
        <!-- Mission Expense: Multi-company (via mission) -->
        <record id="rule_fleet_mission_expense_company" model="ir.rule">
            <field name="name">Mission Expense: Multi-company</field>
            <field name="model_id" ref="model_fleet_mission_expense"/>
            <field name="domain_force">[
                '|',
                ('mission_id.company_id', '=', False),
                ('mission_id.company_id', 'in', company_ids)
            ]</field>
        </record>
        
    </data>
</odoo>
