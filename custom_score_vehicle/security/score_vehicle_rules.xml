<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- ========== SCORE VEHICLE RECORD RULES ========== -->
        
        <!-- Registration Case: Multi-company -->
        <record id="rule_fleet_vehicle_registration_case_company" model="ir.rule">
            <field name="name">Registration Case: Multi-company</field>
            <field name="model_id" ref="model_fleet_vehicle_registration_case"/>
            <field name="domain_force">[
                '|',
                ('company_id', '=', False),
                ('company_id', 'in', company_ids)
            ]</field>
        </record>
        
        <!-- Vehicle Transfer: Multi-company -->
        <record id="rule_fleet_vehicle_transfer_company" model="ir.rule">
